<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <EditText
        android:id="@+id/edittext_routeconfirm_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="100"
        android:hint="请输入name"/>
    <EditText
        android:id="@+id/edittext_routeconfirm_comment"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:maxLength="100"
        android:hint="请输入comment"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/button_routeconfirm_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textColor="@color/grey"
            android:text="取消"/>
        <Button
            android:id="@+id/button_routeconfirm_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textColor="@color/grey"
            android:text="上传"/>
    </LinearLayout>
</LinearLayout>