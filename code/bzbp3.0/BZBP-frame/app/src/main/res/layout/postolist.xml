<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <ImageView android:id="@+id/postolist_image"
        android:layout_width="200dp"
        android:layout_height="269dp"
        android:scaleType="fitCenter"/>

    <LinearLayout
                  android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent">
        <TextView android:id="@+id/postolist_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
        <TextView android:id="@+id/postolist_comment"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
        <TextView android:id="@+id/postolist_username"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
        <TextView android:id="@+id/postolist_date"
              android:layout_width="120dp"
              android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/postolist_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="details"/>
    </LinearLayout>
</LinearLayout>