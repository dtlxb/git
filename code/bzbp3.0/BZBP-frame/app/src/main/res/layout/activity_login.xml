<?xml version="1.0"?>
<FrameLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/layer_main"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login"
        />

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/edittext_login_password"
        android:textSize="20dp"
        android:textColor="#ff4499aa"
        android:hint="password"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"/>

    <EditText
        android:id="@+id/edittext_login_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="200dp"
        android:hint="username"
        android:textColor="#ff4499aa"
        android:textSize="20dp"/>


    <Button
        android:background="#ff008888"
        android:layout_height="49dp"
        android:layout_width="match_parent"
        android:id="@+id/button_login_login"
        android:textColor="#ffffff00"
        android:layout_marginTop="409dp"
        android:layout_marginLeft="73dp"
        android:layout_marginRight="203dp"
        android:text="login"/>

    <Button
        android:background="#ff008888"
        android:layout_height="49dp"
        android:layout_width="match_parent"
        android:id="@+id/button_login_register"
        android:textColor="#ffffff00"
        android:layout_marginTop="474dp"
        android:layout_marginLeft="73dp"
        android:layout_marginRight="203dp"
        android:text="register"/>


</FrameLayout>