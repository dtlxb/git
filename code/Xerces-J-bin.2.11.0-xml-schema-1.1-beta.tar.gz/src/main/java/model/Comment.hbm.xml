<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="model.Comment" table="comment">
		<id name="id" type="int">
			<column name="id" />
			<generator class="assigned" />
		</id>
		<property name="pid" type="int">
			<column name="pid" />
		</property>
		
		<property name="rid" type="int">
			<column name="rid" />
		</property>
							
		<property name="username" type="java.lang.String">
			<column name="username" />
		</property>	
		<property name="context" type="java.lang.String">
			<column name="context" />
		</property>
				
		<property name="date" type="double">
			<column name="date" />
		</property>
		
		
	</class>
</hibernate-mapping>