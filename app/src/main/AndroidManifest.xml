<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.gogoal.im">

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <!-- LeanCloud基础模块（必须加入以下声明）START -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 基础模块 END -->

    <!-- 阿里云播放器 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <!-- 阿里云推流 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- iBeancon功能所需权限 -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <!-- 个推3.0电子围栏功能所需权限 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- 连麦功能所需权限 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
    <!-- release时可去掉 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name=".base.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 实时通信模块、推送（均需要加入以下声明） START -->
        <!-- 实时通信模块、推送都要使用 PushService -->
        <service android:name="com.avos.avoscloud.PushService" />

        <receiver android:name="com.avos.avoscloud.AVBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.USER_PRESENT" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        <!-- 实时通信模块 END -->


        <!-- 配置SDK核心服务 -->
        <service
            android:name=".servise.PushService"
            android:exported="true"
            android:label="PushService"
            android:process=":pushservice" />
        <service android:name=".servise.IntentService" />

        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.TakePhotoActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".activity.PlayerActivity"
            android:configChanges="screenSize|keyboardHidden|orientation"

            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity
            android:name=".activity.FunctionActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.SquareChatRoomActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activity.SingleChatRoomActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".activity.IMRegisterActivity" />
        <activity
            android:name=".activity.ChatRoomActivity"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity android:name=".activity.DemoActivity" />
        <activity android:name=".activity.IMNewFrienActivity" />
        <activity android:name=".activity.IMPersonDetailActivity" />
        <activity
            android:name=".activity.SearchPersonSquareActivity"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity android:name="cn.gogoal.im.activity.SquareCollectActivity" />
        <activity android:name=".activity.SquareCollectActivity" />
        <activity android:name=".activity.SquarePublishActivity" />
        <activity android:name="cn.gogoal.im.activity.OfficialAccountsActivity" />
        <activity android:name="cn.gogoal.im.activity.EditSquareBriefActivity" />
        <activity
            android:name="cn.gogoal.im.activity.EditSquareNameActivity"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity android:name="cn.gogoal.im.activity.IMPersonActivity" />
        <activity android:name="cn.gogoal.im.activity.IMSquareChatSetActivity" />
        <activity android:name=".activity.SearchActivity" />
        <activity android:name="cn.gogoal.im.wxapi.WXPayEntryActivity" />
        <activity android:name=".activity.IMPersonActivity" />
        <activity android:name=".activity.IMSquareChatSetActivity" />
        <activity android:name=".activity.SearchActivity" />
        <activity android:name=".wxapi.WXPayEntryActivity" />
        <activity android:name=".activity.IMAddFriendActivity" />
        <activity android:name=".wxapi.WXEntryActivity" />

        <uses-library
            android:name="com.google.android.maps"
            android:required="false" />

        <activity android:name=".activity.PdfDisplayActivity" />
        <activity
            android:name=".activity.ChooseContactActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.TestActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/TranslucentTheme" />
        <activity android:name=".activity.LiveActivity" />
        <activity
            android:name=".activity.WatchLiveActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".activity.stock.NewMarketActivity" />

        <activity android:name=".activity.stock.MarketActivity" />

        <activity android:name=".activity.stock.MarketDetialActivity" />

        <activity android:name=".activity.stock.MyStockNewsActivity" />

        <activity android:name=".activity.ContactsActivity" />

        <activity android:name=".activity.EditMyStockActivity" />
        <!--<activity android:name=".activity.Test2Activity"></activity>-->
    </application>

</manifest>