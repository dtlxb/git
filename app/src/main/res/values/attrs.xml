<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SelectorButton">

        <!--text color-->
        <attr name="normalTextColor" format="color|reference" />
        <attr name="pressedTextColor" format="color|reference" />
        <attr name="unableTextColor" format="color|reference" />

        <!--stroke width and color, dash width, dash gap-->
        <attr name="strokeDashWidth" format="dimension|reference" />
        <attr name="strokeDashGap" format="dimension|reference" />
        <attr name="normalStrokeWidth" format="dimension|reference" />
        <attr name="pressedStrokeWidth" format="dimension|reference" />
        <attr name="unableStrokeWidth" format="dimension|reference" />
        <attr name="normalStrokeColor" format="color|reference" />
        <attr name="pressedStrokeColor" format="color|reference" />
        <attr name="unableStrokeColor" format="color|reference" />

        <!--background color-->
        <attr name="normalBackgroundColor" format="color|reference" />
        <attr name="pressedBackgroundColor" format="color|reference" />
        <attr name="unableBackgroundColor" format="color|reference" />

        <!--background radius-->
        <attr name="radius" format="dimension|reference" />
        <attr name="round" format="boolean|reference" />

        <!--动画时长-->
        <attr name="animationDuration" format="integer|reference" />

    </declare-styleable>

    <attr name="indexBarTextSize" format="dimension" />

    <declare-styleable name="IndexBar">
        <attr name="indexBarTextSize" />
        <attr name="indexBarPressBackground" format="color" />
    </declare-styleable>

    <declare-styleable name="EasyRecyclerView">
        <!--RecyclerView的类型-->
        <attr name="rv_type" format="integer">
            <enum name="grid" value="0" />
            <enum name="stagger" value="1" />
        </attr>

        <!--RecyclerView的方向-->
        <attr name="rv_orientation">
            <enum name="vertical" value="0" />
            <enum name="horizontal" value="1" />
        </attr>

        <!--网格或瀑布流的列数-->
        <attr name="rv_column" format="integer" />

        <!--下划线高度/宽度-->
        <attr name="rv_divider_size" format="dimension" />
        <!--下划线颜色-->
        <attr name="rv_divider_color" format="color" />
        <!--下划线图片-->
        <attr name="rv_divider_drawable" format="reference" />

        <!--是否开启默认动画-->
        <attr name="rv_default_animator_open" format="boolean" />

    </declare-styleable>

    <declare-styleable name="XLayout">
        <attr name="isFirstVisible" format="boolean" />
    </declare-styleable>

    <declare-styleable name="DragSortListView">
        <attr name="collapsed_height" format="dimension" />
        <attr name="drag_scroll_start" format="float" />
        <attr name="max_drag_scroll_speed" format="float" />
        <attr name="float_background_color" format="color" />
        <attr name="remove_mode">
            <enum name="clickRemove" value="0" />
            <enum name="flingRemove" value="1" />
        </attr>
        <attr name="track_drag_sort" format="boolean"/>
        <attr name="float_alpha" format="float"/>
        <attr name="slide_shuffle_speed" format="float"/>
        <attr name="remove_animation_duration" format="integer"/>
        <attr name="drop_animation_duration" format="integer"/>
        <attr name="drag_enabled" format="boolean" />
        <attr name="sort_enabled" format="boolean" />
        <attr name="remove_enabled" format="boolean" />
        <attr name="drag_start_mode">
            <enum name="onDown" value="0" />
            <enum name="onMove" value="1" />
            <enum name="onLongPress" value="2"/>
        </attr>
        <attr name="drag_handle_id" format="integer" />
        <attr name="fling_handle_id" format="integer" />
        <attr name="click_remove_id" format="integer" />
        <attr name="use_default_controller" format="boolean" />
    </declare-styleable>

    <declare-styleable name="XEditText">
        <!--功能的类型-->
        <attr name="funcType">
            <enum name="normal" value="-1" />
            <enum name="canClear" value="0" />
            <enum name="canWatchPwd" value="1" />
        </attr>
        <!--关闭查看密码的图标-->
        <attr name="eyeClose" format="reference" />
        <!--开启查看密码的图标-->
        <attr name="eyeOpen" format="reference" />
        <!--左侧Drawable的宽度-->
        <attr name="leftDrawableWidth" format="dimension" />
        <!--左侧Drawable的高度-->
        <attr name="leftDrawableHeight" format="dimension" />
        <!--右侧Drawable的宽度-->
        <attr name="rightDrawableWidth" format="dimension" />
        <!--右侧Drawable的高度-->
        <attr name="rightDrawableHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="UnSlidingViewPager">
        <attr name="canScroll" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ImageWithTextView">
        <attr name="MiddleImg" format="reference" />
        <attr name="MiddleString" format="string|reference" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="borderWidth" format="dimension" />
        <attr name="borderColor" format="color" />
        <attr name="borderOverlay" format="boolean" />
        <attr name="fillColor" format="color" />
    </declare-styleable>


    <declare-styleable name="PasswordView">
        <attr name="maxCount" format="integer" />
        <attr name="circleColor" format="color" />
        <attr name="bottomLineColor" format="color" />
        <attr name="dotRadius" format="dimension" />
        <attr name="divideLineWidth" format="dimension" />
        <attr name="divideLineColor" format="color" />
        <attr name="rectAngle" format="dimension" />
        <attr name="psdType" format="enum">
            <enum name="weChat" value="0" />
            <enum name="bottomLine" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SwitchView">
        <attr name="sv_shadow_radius" format="reference|dimension" />
        <attr name="sv_shadow_offset" format="reference|dimension" />
        <attr name="sv_shadow_color" format="reference|color" />
        <attr name="sv_uncheck_color" format="reference|color" />
        <attr name="sv_checked_color" format="reference|color" />

        <attr name="sv_border_width" format="reference|dimension" />
        <attr name="sv_checkline_color" format="reference|color" />
        <attr name="sv_checkline_width" format="reference|dimension" />
        <attr name="sv_uncheckcircle_color" format="reference|color" />
        <attr name="sv_uncheckcircle_width" format="reference|dimension" />
        <attr name="sv_uncheckcircle_radius" format="reference|dimension" />

        <attr name="sv_checked" format="reference|boolean" />
        <attr name="sv_shadow_effect" format="reference|boolean" />
        <attr name="sv_effect_duration" format="reference|integer" />
        <attr name="sv_button_color" format="reference|color" />
        <attr name="sv_show_indicator" format="reference|boolean" />
        <attr name="sv_background" format="reference|color" />
        <attr name="sv_enable_effect" format="reference|boolean" />
    </declare-styleable>

    <declare-styleable name="PointPasswordEditText">
        <attr name="ppe_passwordLength" format="integer" />
        <attr name="ppe_passwordPadding" format="dimension" />
        <attr name="ppe_borderColor" format="color" />
        <attr name="ppe_borderWidth" format="dimension" />
        <attr name="ppe_cursorFlashTime" format="integer" />
        <attr name="ppe_isCursorEnable" format="boolean" />
        <attr name="ppe_cipherEnable" format="boolean" />
        <attr name="ppe_cursorColor" format="color" />
        <attr name="ppe_mode" format="enum">
            <enum name="underline" value="0" />
            <enum name="rect" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="PayPsdInputView">
        <attr name="ppi_maxCount" format="integer" />
        <attr name="ppi_circleColor" format="color" />
        <attr name="ppi_bottomLineColor" format="color" />
        <attr name="ppi_radius" format="dimension" />
        <attr name="ppi_divideLineWidth" format="dimension" />
        <attr name="ppi_divideLineColor" format="color" />
        <attr name="ppi_rectAngle" format="dimension" />
        <attr name="ppi_psdType" format="enum">
            <enum name="weChat" value="0" />
            <enum name="bottomLine" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="PageIndicatorView">
        <attr name="piv_orientation">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>

        <attr name="piv_viewPager" format="reference" />
        <attr name="piv_select" format="integer" />

        <attr name="piv_count" format="integer" />
        <attr name="piv_dynamicCount" format="boolean" />

        <attr name="piv_radius" format="dimension" />
        <attr name="piv_padding" format="dimension" />
        <attr name="piv_strokeWidth" format="dimension" />
        <attr name="piv_scaleFactor" format="float" />
        <attr name="piv_autoVisibility" format="boolean" />

        <attr name="piv_unselectedColor" format="color" />
        <attr name="piv_selectedColor" format="color" />

        <attr name="piv_interactiveAnimation" format="boolean" />
        <attr name="piv_animationDuration" format="integer" />
        <attr name="piv_animationType">
            <enum name="none" value="0" />
            <enum name="color" value="1" />
            <enum name="scale" value="2" />
            <enum name="worm" value="3" />
            <enum name="slide" value="4" />
            <enum name="fill" value="5" />
            <enum name="thinWorm" value="6" />
            <enum name="drop" value="7" />
            <enum name="swap" value="8" />
        </attr>
        <attr name="piv_rtl_mode">
            <enum name="on" value="0" />
            <enum name="off" value="1" />
            <enum name="auto" value="2" />
        </attr>
    </declare-styleable>


    <declare-styleable name="ExpandableLayout">
        <attr name="maxCollapsedLines" format="integer" />
        <attr name="animDuration" format="integer" />
        <attr name="expandDrawable" format="reference" />
        <attr name="collapseDrawable" format="reference" />
        <attr name="contentTextColor" format="color" />
        <attr name="collapseExpandTextColor" format="color" />
        <attr name="contentTextSize" format="dimension" />
        <attr name="collapseExpandTextSize" format="dimension" />
        <attr name="textCollapse" format="string" />
        <attr name="textExpand" format="string" />
        <attr name="collapseExpandGrarity">
            <flag name="left" value="3" />
            <flag name="center" value="17" />
            <flag name="right" value="5" />
        </attr>
        <attr name="drawableGrarity">
            <flag name="left" value="3" />
            <flag name="top" value="48" />
            <flag name="bottom" value="80" />
            <flag name="right" value="5" />
        </attr>
    </declare-styleable>

</resources>