<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:fadingEdgeLength">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:disabledAlpha">0.5</item>
        <item name="android:listDivider">@drawable/shape_divider_1px</item>
        <item name="android:progressBarStyle">?android:attr/progressBarStyleInverse</item>
    </style>

    <style name="TranslucentTheme" parent="AppTheme" />

    <style name="NormalTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextAppearance">@style/NormalTabItem</item>
    </style>

    <style name="DialogEditText" parent="Widget.AppCompat.EditText" />

    <style name="RadioTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabTextAppearance">@style/MainTabItem</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
    </style>

    <style name="NormalTabItem">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColor_333333</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppBarLayoutStyle" parent="Base.Widget.Design.AppBarLayout">
        <item name="android:background">@color/colorchatGrid</item>
    </style>

    <style name="MainTabStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">10dp</item>
        <item name="tabPaddingEnd">10dp</item>
        <item name="tabTextAppearance">@style/MainTabItem</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
    </style>

    <style name="MainTabItem" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--底部选择弹窗-->
    <style name="BaseBottomDialog" parent="@android:style/Theme.DeviceDefault.Dialog">
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@style/BaseBottomDialog.AnimationStyle</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <!--顶部弹窗-->
    <style name="BaseTopDialog" parent="@android:style/Theme.DeviceDefault.Dialog">
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@style/BaseTopDialogStyle</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <!--右边弹窗-->
    <style name="RightDialog" parent="@android:style/Theme.DeviceDefault.Dialog">
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@style/RightDialog.AnimationStyle</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <!--中间弹窗-->
    <style name="CenterDialog" parent="@android:style/Theme.DeviceDefault.Dialog">
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@style/BaseCenterDialogStyle</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <!--分享消息弹窗封装-->
    <style name="CenterShareDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@style/BaseCenterDialogStyle</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="editTextStyle">@style/DialogEditText</item>
    </style>

    <!--弹窗动画底部-->
    <style name="BaseBottomDialog.AnimationStyle">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>

    <!--弹窗动画顶部-->
    <style name="BaseTopDialogStyle">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_from_top</item>
    </style>

    <!--弹窗动画右边-->
    <style name="RightDialog.AnimationStyle">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_right</item>
    </style>

    <!--弹窗动画中间-->
    <style name="BaseCenterDialogStyle">
        <item name="android:windowEnterAnimation">@anim/alpha_in</item>
        <item name="android:windowExitAnimation">@anim/alpha_out</item>
    </style>


    <!--分享弹窗按钮样式-->
    <style name="ShareDialogButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/textColor_333333</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!--聊天界面底部几个图片按钮样式-->
    <style name="BottomImageStyle">
        <item name="android:layout_width">29dp</item>
        <item name="android:layout_height">29dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--自选股 头部radiobutton样式-->
    <style name="RdbMyStockTopStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/selector_tab_mystock_top_text</item>
    </style>

    <style name="WindowDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--全局 验证码输入框-->
    <style name="EditTextPastCode" parent="Widget.AppCompat.EditText">
        <item name="android:background">?attr/editTextBackground</item>
        <item name="android:textColor">@color/textColor_333333</item>
        <item name="android:hint">验证码</item>
        <item name="android:drawableStart">@mipmap/img_verification_code</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">number</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:drawablePadding">11dp</item>
        <item name="android:paddingStart">9dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <!--预览pdf提示窗口样式-->
    <style name="HoloDialogStyle" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@style/HoloDialogTilteStyle</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="HoloDialogTilteStyle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@style/HoloTitleText</item>
    </style>

    <style name="HoloTitleText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ff33b5e5</item>
    </style>

    <style name="NormalSearchView" parent="Base.Widget.AppCompat.SearchView">
        <item name="layout">@layout/layout_search_view</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="closeIcon">@drawable/ic_cancel_black_24dp</item>
        <item name="voiceIcon">@null</item>
        <item name="commitIcon">@null</item>
        <item name="searchIcon">@null</item>
        <item name="searchHintIcon">@null</item>
        <item name="android:divider">@null</item>
        <item name="iconifiedByDefault">false</item>
    </style>

    <style name="TRM_ANIM_STYLE">
        <item name="android:windowEnterAnimation">@anim/trm_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/trm_popup_exit</item>
    </style>

    <!--popupWindow-->
    <style name="AnimationUpPopup">
        <item name="android:windowEnterAnimation">@anim/grow_fade_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/shrink_fade_out_from_bottom</item>
    </style>

    <style name="AnimationFromButtom">
        <item name="android:windowEnterAnimation">@anim/drop_down_form_bottom</item>
        <item name="android:windowExitAnimation">@anim/hide_to_bottom</item>
    </style>

    <style name="AnimationFromRight">
        <item name="android:windowEnterAnimation">@anim/drop_down_from_right</item>
        <item name="android:windowExitAnimation">@anim/hide_to_right</item>
    </style>

    <style name="MineMiddleButtonStyle">
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColor">#030303</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!-- 边框 -->
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item><!-- 半透明 -->
        <item name="android:windowNoTitle">true</item><!-- 无标题 -->
        <item name="android:backgroundDimEnabled">false</item><!-- 模糊 -->
    </style>

    <style name="LiveClose" parent="">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--全屏-->
    <style name="FullScreenTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!--我的Tab页等级认证-->
    <style name="TextViewMineLevel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:background">@drawable/shape_mine_level</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!--修改密码页 提示文本-->
    <style name="TvChangePsw">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/textColor_333333</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!--修改密码页 TableRow-->
    <style name="TabRowChangePsw">
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>
    <!--修改密码页 输入框-->
    <style name="EtChangePsw">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textColor">@color/textColor_333333</item>
        <item name="android:textColorHint">@color/textColor_999999</item>
        <item name="android:textSize">17sp</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="DotSoftKeyboardStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@mipmap/img_face2face_dot</item>
    </style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/stock_map_check</item>
    </style>

    <!--主题选股 标签-->
    <style name="SubjectTagTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/shape_subject_tag</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!--主题选股-主题详情 列表头-->
    <style name="SubjuectListHeadStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColor_333333</item>
    </style>

    <style name="SubjectDetailChartRdbStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">55dp</item>
        <item name="android:button">@null</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/selector_tab_subjec_chart_text</item>
    </style>

    <!--个股中头部的交易信息 key-->
    <style name="TextTreatKeyStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/color0_8White</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--个股中头部的交易信息 value-->
    <style name="TextTreatValueStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">@string/default_char</item>
    </style>
</resources>
