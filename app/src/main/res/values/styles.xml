<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:fadingEdgeLength">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:disabledAlpha">0.5</item>
        <item name="searchViewStyle">@style/NormalSearchView</item>
    </style>

    <style name="NormaltabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextAppearance">@style/NormalTabItem</item>
    </style>

    <style name="NormalTabItem" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColor_333333</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TranslucentTheme" parent="AppTheme"/>

    <style name="AppBarLayoutStyle" parent="Base.Widget.Design.AppBarLayout">
        <item name="android:background">@color/colorchatGrid</item>
    </style>

    <style name="MainTabStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabTextAppearance">@style/MainTabItem</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
    </style>

    <style name="MainTabItem" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--toolbar样式-->
    <style name="GroupToolBar" parent="Base.Widget.AppCompat.Toolbar">
    </style>

    <!--底部选择弹窗-->
    <style name="BottomDialog" parent="@android:style/Theme.DeviceDefault.Dialog">
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <!--<item name="android:windowAnimationStyle">@style/BottomDialog.AnimationStyle</item>-->
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="BottomDialog.AnimationStyle">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>

    <!--分享弹窗按钮样式-->
    <style name="ShareDialogButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/textColor_333333</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!--聊天界面底部几个图片按钮样式-->
    <style name="BottomImageStyle">
        <item name="android:layout_width">29dp</item>
        <item name="android:layout_height">29dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="WindowDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="HoloDialogStyle" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsFloating">true</item>

        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@style/HoloDialogTilteStyle</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="android:windowActionModeOverlay">true</item>

        <item name="android:colorBackgroundCacheHint">@null</item>

    </style>

    <style name="HoloDialogTilteStyle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@style/HoloTitleText</item>
    </style>

    <style name="HoloTitleText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ff33b5e5</item>
    </style>

    <style name="NormalSearchView" parent="Base.Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
        <item name="closeIcon">@drawable/ic_cancel_black_24dp</item>
        <item name="voiceIcon">@null</item>
        <item name="commitIcon">@null</item>
        <item name="searchIcon">@null</item>
        <item name="searchHintIcon">@null</item>
        <item name="android:divider">@null</item>
        <item name="iconifiedByDefault">false</item>
    </style>

    <style name="SearchEdit" parent="NormalSearchView">
        <item name="queryBackground">@android:color/transparent</item>
        <item name="closeIcon">@null</item>
        <item name="voiceIcon">@null</item>
        <item name="commitIcon">@null</item>
        <item name="searchIcon">@null</item>
        <item name="android:divider">@null</item>
        <item name="iconifiedByDefault">false</item>
    </style>

    <!--popupWindow-->
    <style name="AnimationUpPopup">
        <item name="android:windowEnterAnimation">@anim/grow_fade_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/shrink_fade_out_from_bottom</item>
    </style>

    <style name="AnimationFromButtom" >
        <item name="android:windowEnterAnimation">@anim/drop_down_form_bottom</item>
        <item name="android:windowExitAnimation">@anim/hide_to_bottom</item>
    </style>

    <style name="AnimationFromRight" >
        <item name="android:windowEnterAnimation">@anim/drop_down_from_right</item>
        <item name="android:windowExitAnimation">@anim/hide_to_right</item>
    </style>

    <style name="MineRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColor">#030303</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
