<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.MyQrCodeActivity">

    <include layout="@layout/include_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="25dp"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:paddingTop="25dp">

        <RelativeLayout
            android:id="@+id/layout_my_qrcode_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="15dp">

            <com.hply.roundimage.roundImage.RoundedImageView
                android:id="@+id/iv_my_qrcode_avatar"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:src="@mipmap/logo"
                app:riv_corner_radius="4dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_my_qrcode_avatar"
                android:layout_alignTop="@+id/iv_my_qrcode_avatar"
                android:layout_marginStart="25dp"
                android:layout_toEndOf="@+id/iv_my_qrcode_avatar"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_my_qqrcode_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/textColor_333333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_my_qqrcode_duty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/textColor_999999"
                    android:textSize="18sp" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_my_qrcode_head"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@mipmap/img_my_qrcode_right_circle" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:contentDescription="@null"
                android:src="@mipmap/img_my_qrcode_line" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@mipmap/img_my_qrcode_left_circle" />

        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_qrcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_line"
            android:background="@android:color/white"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/appCompatImageView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="45dp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="扫一扫二维码,加我Go-Goal。"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appCompatImageView" />

        </android.support.constraint.ConstraintLayout>

        <android.support.v4.widget.Space
            android:id="@+id/space"
            android:layout_width="15dp"
            android:layout_height="0dp"
            android:layout_below="@+id/layout_qrcode"
            android:layout_centerHorizontal="true" />

        <cn.gogoal.im.ui.view.SelectorButton
            android:id="@+id/btn_my_qrcode_save_qrcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/layout_qrcode"
            android:layout_marginTop="25dp"
            android:layout_toStartOf="@+id/space"
            android:text="保存到手机"
            app:normalBackgroundColor="#5483D5"
            app:normalTextColor="@android:color/white"
            app:pressedBackgroundColor="#FF8DA3C9"
            app:pressedTextColor="@color/textColor_999999"
            app:radius="4dp" />

        <cn.gogoal.im.ui.view.SelectorButton
            android:id="@+id/btn_my_qrcode_share_qrcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/layout_qrcode"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/space"
            android:text="分享"
            app:normalBackgroundColor="#5483D5"
            app:normalTextColor="@android:color/white"
            app:pressedBackgroundColor="#FF8DA3C9"
            app:pressedTextColor="@color/textColor_999999"
            app:radius="4dp" />
    </RelativeLayout>


</LinearLayout>