<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/liveTelecastTrailer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/shape_player_live_trailer"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textLiveTrailer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="12dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textDaysDecade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero_0"
            android:textColor="@color/count_down"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textDaysUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero_0"
            android:textColor="@color/count_down"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_day"
            android:textColor="@android:color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textHoursDecade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero_0"
            android:textColor="@color/count_down"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textHoursUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero_0"
            android:textColor="@color/count_down"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_hour"
            android:textColor="@android:color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textMinutesDecade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero_0"
            android:textColor="@color/count_down"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textMinutesUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero_0"
            android:textColor="@color/count_down"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_minute"
            android:textColor="@android:color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textSecondsDecade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero_0"
            android:textColor="@color/count_down"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textSecondsUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero_0"
            android:textColor="@color/count_down"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_second"
            android:textColor="@android:color/white"
            android:textSize="14dp" />

    </LinearLayout>

</LinearLayout>