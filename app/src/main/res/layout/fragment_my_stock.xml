<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        app:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_scrollFlags="scroll|enterAlways">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/stock_market_bg"
                android:gravity="center_vertical">

                <!--指数缩略窗-->
                <RelativeLayout
                    android:id="@+id/layout_tiny_market_popu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true">

                    <LinearLayout
                        android:id="@+id/layout_tiny_market"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingStart="15dp">

                        <TextView
                            android:id="@+id/tv_tiny_mystock_market_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColor_333333"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_tiny_mystock_market_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColor_333333"
                            android:textSize="18sp" />

                        <hply.com.niugu.autofixtext.AutofitTextView
                            android:id="@+id/tv_tiny_mystock_market_price_change$rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textColor="@color/textColor_333333"
                            android:textSize="14sp"
                            app:minTextSize="8sp"
                            app:sizeToFit="true" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_show_tinymarket_dialog"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/layout_tiny_market"
                        android:contentDescription="@null"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:scaleType="fitStart"
                        android:src="@mipmap/img_mystock_down_flag" />

                </RelativeLayout>

                <View
                    android:id="@+id/flag_middle"
                    android:layout_width="2px"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/layout_tiny_market_popu"
                    android:background="#d8d8d8" />

                <!--新闻、公告、研报-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/flag_middle"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp">

                    <TextView
                        android:id="@+id/tv_mystock_news"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="3dp"
                        android:drawableTop="@mipmap/img_mystock_news"
                        android:gravity="center"
                        android:text="新闻"
                        android:textColor="@color/textColor_666666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_mystock_gonggao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="3dp"
                        android:drawableTop="@mipmap/img_mystock_gonggao"
                        android:gravity="center"
                        android:text="公告"
                        android:textColor="@color/textColor_666666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_mystock_yanbao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="3dp"
                        android:drawableTop="@mipmap/img_mystock_yanbao"
                        android:gravity="center"
                        android:text="研报"
                        android:textColor="@color/textColor_666666"
                        android:textSize="14sp" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/item_mystock"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingEnd="15dp"
            android:paddingStart="0dp"
            android:background="@drawable/shape_line_bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_mystock_stockname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/text_empty"
                android:layout_marginStart="15dp"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/tv_mystock_price"
                android:textColor="@color/textColor_333333"
                android:textSize="16sp" />

            <cn.gogoal.im.ui.view.SortView
                android:id="@+id/tv_mystock_price"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/tv_mystock_rate"
                android:gravity="center"
                android:text="@string/text_empty"
                android:textColor="@color/textColor_333333"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_widthPercent="35%" />

            <cn.gogoal.im.ui.view.SortView
                android:id="@+id/tv_mystock_rate"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/text_empty"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/textColor_333333"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_widthPercent="25%" />
        </android.support.percent.PercentRelativeLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_mystock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff" />
    </android.support.v4.widget.SwipeRefreshLayout>
</android.support.design.widget.CoordinatorLayout>