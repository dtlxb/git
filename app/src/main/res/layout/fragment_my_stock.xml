<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <cn.gogoal.im.ui.view.DrawableCenterTextView
                android:id="@+id/btn_news"
                style="@style/myStockNewsStyle"
                android:drawableLeft="@mipmap/img_mystock_news"
                android:text="新闻" />

            <cn.gogoal.im.ui.view.DrawableCenterTextView
                android:id="@+id/btn_gonggao"
                style="@style/myStockNewsStyle"
                android:drawableLeft="@mipmap/img_mystock_gonggao"
                android:text="公告" />

            <cn.gogoal.im.ui.view.DrawableCenterTextView
                android:id="@+id/btn_yanbao"
                style="@style/myStockNewsStyle"
                android:drawableLeft="@mipmap/img_mystock_yanbao"
                android:text="研报" />

        </LinearLayout>

        <include layout="@layout/layout_space_15dp" />

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/item_mystock"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/shape_line_bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_mystock_stockname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_toStartOf="@+id/tv_mystock_price"
                android:text="全部"
                android:textColor="@color/textColor_333333"
                android:textSize="16sp" />

            <cn.gogoal.im.ui.view.SortView
                android:id="@+id/tv_mystock_price"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@+id/tv_mystock_rate"
                android:gravity="center|end"
                android:text="最新价"
                android:textColor="@color/textColor_333333"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_widthPercent="25%" />

            <cn.gogoal.im.ui.view.SortView
                android:id="@+id/tv_mystock_rate"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="涨跌幅"
                android:textColor="@color/textColor_333333"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_widthPercent="25%" />
        </android.support.percent.PercentRelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_mystock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:scrollbars="vertical" />

    </LinearLayout>

</android.support.v4.widget.SwipeRefreshLayout>