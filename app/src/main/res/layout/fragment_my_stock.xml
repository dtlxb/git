<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".activity.Test2Activity">

    <!--标题-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/shape_bottom_line">

        <TextView
            android:id="@+id/tv_mystock_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:text="编辑"
            android:textColor="@color/textColor_333333"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:text="自选"
            android:textColor="@color/textColor_333333"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/img_mystock_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:src="@mipmap/img_refresh" />

    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swiperefreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <cn.gogoal.im.ui.view.DrawableCenterTextView
                    android:id="@+id/search_market"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_search_activity_edit"
                    android:drawableLeft="@mipmap/img_search"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:text="股票代码/名称/拼音"
                    android:textColor="@color/colorXLayout"
                    android:textSize="14sp"
                    app:layout_scrollFlags="scroll|enterAlways" />

                <cn.gogoal.im.ui.view.XLayout
                    android:id="@+id/xLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <include layout="@layout/include_line" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:background="@color/stock_market_bg"
                            android:gravity="center_vertical">

                            <AdapterViewFlipper
                                android:id="@+id/flipper_mystock_banner"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:layout_toStartOf="@+id/flag_middle"
                                android:autoStart="true"
                                android:flipInterval="2000" />

                            <View
                                android:id="@+id/flag_middle"
                                android:layout_width="1dp"
                                android:layout_height="35dp"
                                android:layout_centerInParent="true"
                                android:background="#d8d8d8" />

                            <!--新闻、公告、研报-->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_toEndOf="@+id/flag_middle"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingEnd="5dp"
                                android:paddingStart="5dp">

                                <TextView
                                    android:id="@+id/tv_mystock_news"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:drawablePadding="5dp"
                                    android:drawableTop="@mipmap/img_mystock_news"
                                    android:gravity="center"
                                    android:text="新闻"
                                    android:textColor="@color/textColor_666666"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_mystock_gonggao"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:drawablePadding="5dp"
                                    android:drawableTop="@mipmap/img_mystock_gonggao"
                                    android:gravity="center"
                                    android:text="公告"
                                    android:textColor="@color/textColor_666666"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_mystock_yanbao"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:drawablePadding="5dp"
                                    android:drawableTop="@mipmap/img_mystock_yanbao"
                                    android:gravity="center"
                                    android:text="研报"
                                    android:textColor="@color/textColor_666666"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </RelativeLayout>

                        <include layout="@layout/item_my_stock" />


                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_mystock"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#fff" />
                    </LinearLayout>
                </cn.gogoal.im.ui.view.XLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>