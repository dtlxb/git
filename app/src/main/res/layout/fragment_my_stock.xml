<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        app:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_scrollFlags="scroll|enterAlways">

            <cn.gogoal.im.ui.view.DrawableCenterTextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:background="@drawable/shape_search_activity_edit"
                android:drawableLeft="@mipmap/img_search"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="股票代码/名称/拼音"
                android:textColor="@color/colorXLayout"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/stock_market_bg"
                android:gravity="center_vertical">

                <!--指数缩略窗-->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/flag_middle">

                    <LinearLayout
                        android:id="@+id/layout_tiny_market"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toStartOf="@+id/img_show_tinymarket_dialog"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingStart="20dp">

                        <TextView
                            android:id="@+id/tv_tiny_mystock_market_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColor_333333"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_tiny_mystock_market_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColor_333333"
                            android:textSize="18sp" />

                        <hply.com.niugu.autofixtext.AutofitTextView
                            android:id="@+id/tv_tiny_mystock_market_price_change$rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textColor="@color/textColor_333333"
                            android:textSize="14sp"
                            app:minTextSize="8sp"
                            app:sizeToFit="true" />

                    </LinearLayout>


                    <ImageView
                        android:id="@+id/img_show_tinymarket_dialog"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:contentDescription="@null"
                        android:paddingEnd="20dp"
                        android:paddingStart="20dp"
                        android:paddingTop="10dp"
                        android:scaleType="fitStart"
                        android:src="@mipmap/img_mystock_down_flag" />


                </RelativeLayout>

                <View
                    android:id="@+id/flag_middle"
                    android:layout_width="1dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    android:background="#d8d8d8" />

                <!--新闻、公告、研报-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/flag_middle"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp">

                    <TextView
                        android:id="@+id/tv_mystock_news"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@mipmap/img_mystock_news"
                        android:gravity="center"
                        android:text="新闻"
                        android:textColor="@color/textColor_666666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_mystock_gonggao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@mipmap/img_mystock_gonggao"
                        android:gravity="center"
                        android:text="公告"
                        android:textColor="@color/textColor_666666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_mystock_yanbao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@mipmap/img_mystock_yanbao"
                        android:gravity="center"
                        android:text="研报"
                        android:textColor="@color/textColor_666666"
                        android:textSize="14sp" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <include layout="@layout/item_my_stock" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_mystock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff" />
    </android.support.v4.widget.SwipeRefreshLayout>
</android.support.design.widget.CoordinatorLayout>