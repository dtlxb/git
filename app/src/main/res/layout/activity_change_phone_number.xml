<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/stock_market_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".activity.ChangePhoneNumberActivity">

    <include layout="@layout/include_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="更换手机号后\n下次登录可使用新手机号登录" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="20dp">

        <cn.gogoal.im.ui.view.XEditText
            android:id="@+id/et_change_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/login_edit_border"
            android:drawableLeft="@mipmap/icon_number"
            android:drawablePadding="9dp"
            android:hint="新手机号"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:inputType="number"
            android:maxLength="11"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:singleLine="true"
            android:textColor="@color/textColor_333333"
            android:textColorHint="@color/textColor_999999"
            android:textSize="15sp"
            app:funcType="canClear" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <cn.gogoal.im.ui.view.XEditText
                android:id="@+id/et_pase_code"
                style="@style/EditTextPastCode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:background="@drawable/login_edit_border"
                android:drawableLeft="@mipmap/img_verification_code"
                android:hint="验证码"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:textColor="@color/textColor_333333"
                android:textColorHint="@color/textColor_999999"
                android:textSize="15sp"
                app:funcType="canClear"/>

            <TextView
                android:id="@+id/tv_get_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/selector_tv_verification_code"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:paddingBottom="12dp"
                android:paddingEnd="25dp"
                android:paddingStart="25dp"
                android:paddingTop="12dp"
                android:text="获取验证码"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <cn.gogoal.im.ui.view.SelectorButton
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="25dp"
        android:lines="1"
        android:text="验证手机号"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        app:normalBackgroundColor="@color/player_add_friend"
        app:pressedBackgroundColor="#f68d8d"
        app:radius="4dp"
        />

</LinearLayout>