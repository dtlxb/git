<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout_simple_image_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_normal_write2gray"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="20dp"
    android:paddingTop="20dp">

    <Button
        android:id="@+id/btn_mine_my_friend"
        style="@style/MineMiddleButtonStyle"
        android:drawableTop="@mipmap/img_mine_my_friend"
        android:text="我的好友" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/colorDivider_d9d9d9" />

    <Button
        android:id="@+id/btn_mine_my_group"
        style="@style/MineMiddleButtonStyle"
        android:drawableTop="@mipmap/img_mine_my_group"
        android:text="群组" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/colorDivider_d9d9d9" />

    <Button
        android:id="@+id/btn_mine_my_phone_contacts"
        style="@style/MineMiddleButtonStyle"
        android:drawableTop="@mipmap/img_mine_my_phone_contact"
        android:text="手机通讯录" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/colorDivider_d9d9d9" />

    <Button
        android:id="@+id/btn_mine_inviting_friends"
        style="@style/MineMiddleButtonStyle"
        android:drawableTop="@mipmap/img_mine_inviting_friends"
        android:text="邀请好友" />
</LinearLayout>