<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_contacts_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="9dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:paddingTop="9dp">

    <ImageView
        android:id="@+id/item_contacts_iv_icon"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@mipmap/contacts_new_friend" />

    <TextView
        android:id="@+id/item_contacts_tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="新的朋友"
        android:textColor="@color/textColor_333333"
        android:textSize="16sp" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

    <com.hply.imagepicker.view.SuperCheckBox
        android:id="@+id/check_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:clickable="false"
        android:focusable="false"
        android:padding="10dp"
        android:visibility="gone" />

</LinearLayout>