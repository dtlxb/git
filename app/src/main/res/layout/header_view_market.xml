<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/head_view_market"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_market_list_title_press"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_stock_ranklist_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/hot_industry"
            android:layout_marginStart="15dp"
            android:textColor="@color/stock_text_gray"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/more"
            android:drawablePadding="2dp"
            android:drawableRight="@mipmap/img_more"
            android:layout_marginEnd="15dp"
            android:textColor="@color/stock_text_gray"
            android:textSize="16sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorDivider_d9d9d9" />

</LinearLayout>