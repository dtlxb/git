<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".activity.stock.NewMarketActivity">

    <include layout="@layout/include_title" />

    <cn.gogoal.im.ui.view.DrawableCenterTextView
        android:id="@+id/search_market"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:background="@drawable/shape_search_activity_edit"
        android:drawableLeft="@mipmap/img_search"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:text="股票代码/名称/拼音"
        android:textColor="@color/colorXLayout"
        android:textSize="14sp" />

    <include layout="@layout/include_line"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout_market"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextColor="@color/stock_text_black"
        app:tabGravity="fill"
        app:tabSelectedTextColor="@color/stock_red"
        app:tabMode="fixed"
        app:tabIndicatorColor="@color/stock_red"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_market"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>