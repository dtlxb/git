<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/edit_bag"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/player_linear"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignBottom="@+id/GLViewContainer"
        android:layout_gravity="center_horizontal|bottom"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/player_edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|left"
            android:hint="@string/player_edit"
            android:paddingLeft="12dp"
            android:textColor="@color/textColor_333333"
            android:textColorHint="@color/edit_hint"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/send_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/send"
            android:textColor="@color/send_text"
            android:textSize="16dp" />

    </LinearLayout>

</LinearLayout>