<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:id="@+id/item_rv_stock_detail_treat"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_stock_detail_head_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:maxLines="1"
        android:text="外盘"
        android:textColor="@color/textColor_999999"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_stock_detail_head_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/tv_stock_detail_head_desc"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="2.14万"
        android:gravity="center_vertical|end"
        android:textColor="@color/textColor_333333"
        android:textSize="12sp" />
</RelativeLayout>