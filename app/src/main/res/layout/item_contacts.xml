<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_contacts_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingBottom="10dp"
    android:paddingEnd="10dp"
    android:paddingStart="15dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/item_contacts_iv_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@mipmap/cache_img_contacts_0" />

    <TextView
        android:id="@+id/item_contacts_tv_nickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="新的朋友" />

    <com.hply.imagepicker.view.SuperCheckBox
        android:id="@+id/check_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:clickable="false"
        android:visibility="gone"
        android:focusable="false"
        android:padding="10dp" />

</LinearLayout>