<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".activity.stock.MarketActivity">

    <include layout="@layout/include_title" />

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <cn.gogoal.im.ui.view.DrawableCenterTextView
                android:id="@+id/search_market"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:background="@drawable/shape_search_activity_edit"
                android:drawableLeft="@mipmap/img_search"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="股票代码/名称/拼音"
                android:textColor="@color/colorXLayout"
                android:textSize="14sp"
                app:layout_scrollFlags="scroll|enterAlways" />

            <include layout="@layout/include_line" />

            <android.support.design.widget.TabLayout
                android:id="@+id/tablayout_market"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/stock_market_bg"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/stock_red"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/stock_red"
                app:tabTextColor="@color/stock_text_black" />

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_market"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>