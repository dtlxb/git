<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:orientation="vertical"
    android:background="@drawable/selector_normal_white2gray">

    <TextView
        android:id="@+id/tv_item_info_date$origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor_999999"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_item_info_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/textColor_333333"/>
</LinearLayout>