<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dialog_normal_alert_message"
        android:gravity="center"
        android:paddingBottom="25dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="25dp"
        android:text="该直播目前仅限由朝阳永续定向邀约发起，如果您有直播合作意向请联系曹小姐：021-68889706-8127"
        android:textColor="@color/textColor_333333"
        android:textSize="16sp" />

    <View
        android:id="@+id/flag_view_btm"
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_below="@+id/tv_dialog_message"
        android:background="@color/textColor_666666" />

    <View
        android:id="@+id/flag_view_middle"
        android:layout_width="0.5px"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_cancle"
        android:layout_alignTop="@+id/btn_cancle"
        android:layout_below="@+id/flag_view_btm"
        android:layout_centerHorizontal="true"
        android:background="@color/textColor_666666" />

    <TextView
        android:id="@+id/btn_cancle"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/flag_view_btm"
        android:layout_toStartOf="@id/flag_view_middle"
        android:text="取消"
        android:background="@drawable/shape_dialog_normal_alert_btn_cancle"
        android:textColor="@color/textColor_333333"/>

    <TextView
        android:id="@+id/btn_ok"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/flag_view_btm"
        android:layout_toEndOf="@id/flag_view_middle"
        android:text="确定"
        android:background="@drawable/shape_dialog_normal_alert_btn_ok"
        android:textColor="#2782d7" />

</RelativeLayout>