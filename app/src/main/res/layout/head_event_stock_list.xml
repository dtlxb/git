<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/head_event_stock_list"
    android:background="@android:color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_alignParentTop="true"
        android:background="#f0f0f0"/>

    <LinearLayout
        android:id="@+id/layout_item_event_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:layout_below="@+id/view_divider"
        android:orientation="horizontal"
        android:padding="15dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_item_event_list_name_icon"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/tv_item_event_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="石墨烯"
            android:textColor="@color/textColor_333333"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_event_list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:drawablePadding="15dp"
        android:layout_below="@+id/view_divider"
        android:drawableRight="@mipmap/img_more_in_bigdata"
        android:padding="15dp"
        android:text="2017-06-29"
        android:textColor="@color/textColor_666666"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_item_event_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_item_event_list_name"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:text="askdjhfakjsdfhalkjdhfalkjsdfhaljkdfhalskdfhalkjdfaskdjhfakjsdfhalkjdhfalkjsdfhaljkdfhalskdfhalkjdf"
        android:textSize="14sp" />

</RelativeLayout>