<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:layout_centerVertical="true"
    android:background="@color/absoluteWhite">


    <RelativeLayout
        android:id="@+id/head_layout"
        android:layout_width="68dp"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/head_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitXY"
            android:src="@mipmap/timg" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/head_layout"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/whose_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="JR屎密斯JR屎密斯"
            android:textColor="@color/textColor_333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/last_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/whose_message"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="16dp"
            android:layout_toRightOf="@+id/whose_message"
            android:text="今天下午"
            android:textColor="@color/textColor_666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/last_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="你晚饭还吃不吃了，不吃我吃了"
            android:textColor="@color/relater_play_count"
            android:textSize="14sp" />

    </RelativeLayout>

</RelativeLayout>