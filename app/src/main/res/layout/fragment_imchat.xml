<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/message_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/live_chat_bottom"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/voice_layout"
            android:layout_width="60dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/voice_iv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_apps_black_24dp"
                android:tag="key_bod" />

        </RelativeLayout>

        <EditText
            android:id="@+id/live_chat_edit"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:background="@drawable/live_edite_border"
            android:hint="请输入..."
            android:paddingLeft="20dp"
            android:textSize="14dp" />

        <Button
            android:tag="un_pressed"
            android:id="@+id/recode_voice"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:background="@drawable/selector_text_border"
            android:gravity="center"
            android:text="按住 说话"
            android:visibility="gone" />

        <TextView
            android:id="@+id/message_send"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="发送"
            android:textColor="@color/online_number"
            android:textSize="16sp"
            android:visibility="gone" />

        <RelativeLayout
            android:tag="un_expanded"
            android:id="@+id/expand_layout"
            android:layout_width="60dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/expand_more"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_add_circle_black_24dp" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/find_more_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:visibility="gone">

        <Button
            android:id="@+id/take_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拍照"
            android:textColor="@color/colorTitle"
            android:textSize="16sp" />

        <Button
            android:id="@+id/get_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/take_photo"
            android:text="照片"
            android:textColor="@color/colorTitle"
            android:textSize="16sp" />

    </RelativeLayout>

</LinearLayout>