<?xml version="1" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/selector_normal_white2gray"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/flag_layout_stock_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingEnd="0dp"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        app:layout_widthPercent="30%">

        <TextView
            android:id="@+id/tv_item_subject_about_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="太极股份"
            android:textColor="@color/textColor_333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_item_subject_about_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="002368"
            android:textColor="@color/textColor_666666"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_subject_about_rate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/flag_layout_stock_info"
        android:gravity="center"
        android:text="+7.52%"
        android:textColor="@color/stock_red"
        android:textStyle="bold"
        app:layout_widthPercent="25%" />

    <TextView
        android:id="@+id/tv_item_subject_about_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/tv_item_subject_about_rate"
        android:gravity="center"
        android:text="4433.40"
        android:textColor="@color/textColor_333333"
        android:textStyle="bold"
        app:layout_widthPercent="25%" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_item_subject_about_add_stock"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:scaleType="centerInside"
        android:src="@mipmap/choose_stock"
        android:textColor="@color/textColor_333333"
        android:textSize="16sp"
        app:layout_widthPercent="15%" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:background="@color/colorDivider_d9d9d9" />
</android.support.percent.PercentRelativeLayout>