<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--标题-->
    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_size"
        android:background="@drawable/shape_line_bottom"
        android:paddingEnd="8dp"
        android:paddingStart="8dp">

        <ImageView
            android:id="@+id/tv_mystock_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:gravity="center"
            android:paddingEnd="7dp"
            android:paddingStart="7dp"
            android:src="@mipmap/img_edit"
            android:textColor="@color/textColor_333333"
            android:textSize="16sp" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_my_stock"
            style="@style/RadioTabLayout"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            app:tabSelectedTextColor="@android:color/white"
            app:tabTextColor="@color/colorPrimary" />

        <ImageView
            android:id="@+id/img_mystock_refresh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:paddingEnd="7dp"
            android:paddingStart="8dp"
            android:src="@mipmap/img_refresh"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_message_tag"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:src="@mipmap/home_bottom_tab_icon_message_normal" />

        <ImageView
            android:id="@+id/img_mystock_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_message_tag"
            android:contentDescription="@null"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:src="@mipmap/img_title_search" />
    </RelativeLayout>

    <cn.gogoal.im.ui.widget.UnSlidingViewPager
        android:id="@+id/vp_my_stock_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>