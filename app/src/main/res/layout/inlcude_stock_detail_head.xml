<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_stock_detail_head"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/stock_gray">

    <RelativeLayout
        android:id="@+id/layout_price_and_rate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingBottom="10dp"
        app:layout_widthPercent="45%">

        <TextView
            android:id="@+id/tv_stock_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="0.00"
            android:textColor="@android:color/white"
            android:textSize="45sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_stock_detail_change_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_stock_detail_price"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="--"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_stock_detail_change_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_stock_detail_price"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="--"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </RelativeLayout>

    <TableLayout
        android:id="@+id/layout_stock_detail_treat_head"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/layout_price_and_rate"
        android:layout_alignTop="@+id/layout_price_and_rate"
        android:layout_toEndOf="@+id/layout_price_and_rate"
        android:shrinkColumns="*"
        android:paddingStart="15dp"
        android:stretchColumns="*"
        app:layout_widthPercent="45%">

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <include
                android:id="@+id/include_detail_0"
                layout="@layout/item_rv_stock_detail_head" />

            <include
                android:id="@+id/include_detail_1"
                layout="@layout/item_rv_stock_detail_head" />
        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <include
                android:id="@+id/include_detail_2"
                layout="@layout/item_rv_stock_detail_head" />

            <include
                android:id="@+id/include_detail_3"
                layout="@layout/item_rv_stock_detail_head" />
        </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/iv_show_info_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/layout_stock_detail_treat_head"
        android:layout_alignTop="@+id/layout_stock_detail_treat_head"
        android:layout_toEndOf="@+id/layout_stock_detail_treat_head"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        android:src="@mipmap/img_drop_down" />

</android.support.percent.PercentRelativeLayout>