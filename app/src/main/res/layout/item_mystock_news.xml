<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:orientation="vertical"
    android:paddingEnd="15dp"
    android:gravity="center_vertical"
    android:paddingStart="15dp">

    <TextView
        android:id="@+id/tv_mystock_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="万科股价如继续下跌，谁能成为中小股东的救星"
        android:textColor="@color/textColor_333333"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_mystock_news_stockInfo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="万科(000002)"
            android:textColor="@color/textColor_666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_mystock_news_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="2017-05-12 09-16"
            android:textColor="@color/textColor_999999"
            android:textSize="13sp" />

    </LinearLayout>

</LinearLayout>