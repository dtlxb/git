<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:padding="15dp">

    <!--1000-->
    <LinearLayout
        android:id="@+id/layout_item_subject_list_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#febd23"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_item_subject_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主题指数"
            android:textColor="#99ffffff"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_item_subject_list_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1888"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_item_subject_list_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+11.28%"
            android:textColor="#ffffff"
            android:textSize="10sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_item_subject_list_theme_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/layout_item_subject_list_head"
        android:text="煤炭"
        android:textColor="@color/textColor_333333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_item_subject_list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_item_subject_list_title"
        android:layout_marginBottom="1.5dp"
        android:layout_alignStart="@+id/tv_item_subject_list_theme_name"
        android:text="发现时间：2017-06-24 08:26"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_item_subject_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_item_subject_list_tag2"
        android:layout_alignStart="@+id/tv_item_subject_list_theme_name"
        android:text="供需加速改善，旺季提前来临"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginBottom="1.5dp"
        android:textColor="@color/textColor_333333"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_item_subject_list_tag1"
        style="@style/SubjectTagTextStyle"
        android:layout_alignBottom="@+id/layout_item_subject_list_head"
        android:layout_alignStart="@+id/tv_item_subject_list_theme_name"
        android:text="供给侧改革" />

    <TextView
        android:id="@+id/tv_item_subject_list_tag2"
        style="@style/SubjectTagTextStyle"
        android:layout_alignBottom="@+id/layout_item_subject_list_head"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/tv_item_subject_list_tag1"
        android:text="业绩扭亏" />

</RelativeLayout>