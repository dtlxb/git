<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_stock_rank_list"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/selector_normal_write2gray"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_marginBottom="1px">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_stock_ranklist_stockName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_empty"
            android:textColor="@color/stock_text_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_stock_ranklist_stockCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_empty"
            android:textColor="#aaa"
            android:textSize="13sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_stock_ranklist_currentPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_empty"
        android:textColor="@color/stock_text_black"
        android:layout_centerInParent="true"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_stock_ranklist_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignEnd="@+id/tv_stock_ranklist_currentPrice"
        android:text="@string/text_empty"
        android:textColor="@color/stock_text_gray"
        android:textSize="15sp" />

</RelativeLayout>