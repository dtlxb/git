<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_layout_simple_image_text"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@drawable/selector_normal_write2gray"
    android:orientation="horizontal">

    <com.hply.roundimage.roundImage.RoundedImageView
        android:id="@+id/item_img_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="15dp"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@mipmap/logo"
        app:riv_corner_radius="@dimen/icon_radius" />

    <TextView
        android:id="@+id/item_text_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/item_img_normal"
        android:layout_toStartOf="@+id/flag_img_more"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/str_login_in"
        android:textColor="@color/textColor_333333"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/flag_img_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:contentDescription="@null"
        android:src="@mipmap/img_more" />

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/item_img_normal"
        android:background="@color/colorDivider_d9d9d9" />

</RelativeLayout>