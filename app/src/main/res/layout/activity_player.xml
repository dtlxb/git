<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/relative_Container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/GLViewContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_margin="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:background="@color/black"
            android:padding="0dp"
            android:paddingBottom="0dp"
            android:paddingEnd="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingStart="0dp"
            android:paddingTop="0dp">

        </FrameLayout>

        <ImageView
            android:id="@+id/imgLoadPic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/play_bg"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/LayoutTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/img_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/login_loading"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:shadowColor="@color/live_chat"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="@string/go_goal_live"
                android:textColor="@android:color/white"
                android:textSize="13dp" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeFun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/imgPlayerClose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/player_back" />

        <LinearLayout
            android:id="@+id/linearPlayerFun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgPlayerShare"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/player_share" />

            <ImageView
                android:id="@+id/imgPlayerFullScreen"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@mipmap/player_full_screen" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/LayoutProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/relative_Container"
        android:layout_gravity="center_horizontal|bottom"
        android:background="#99000000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="12dp"
        android:visibility="gone">

        <CheckBox
            android:id="@+id/imgPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_play_pause"
            android:button="@null" />

        <TextView
            android:id="@+id/currentDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="00:00:00"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/play_progress_text"
            android:textSize="11dp" />

        <SeekBar
            android:id="@+id/progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="true"
            android:max="100000000"
            android:maxHeight="6dp"
            android:minHeight="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:progress="0"
            android:progressDrawable="@drawable/seekbar_style"
            android:thumb="@mipmap/vp_progress"
            android:thumbOffset="0dp" />

        <TextView
            android:id="@+id/totalDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="00:00:00"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/play_progress_text"
            android:textSize="11dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/player_line_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relative_Container"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/textVideoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_char"
                android:textColor="@color/textColor_333333"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/textProgrammeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="@string/default_char"
                android:textColor="@color/textColor_666666"
                android:textSize="13dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp">

                <TextView
                    android:id="@+id/textPlayBase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_play_base"
                    android:drawableLeft="@mipmap/play_base"
                    android:drawablePadding="3dp"
                    android:text="@string/default_char"
                    android:textColor="@color/textColor_666666"
                    android:textSize="11dp" />

                <CheckBox
                    android:id="@+id/boxCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:button="@null"
                    android:drawableLeft="@mipmap/play_category"
                    android:drawablePadding="3dp"
                    android:text="@string/related_video"
                    android:textColor="@color/textColor_333333"
                    android:textSize="15dp" />

            </RelativeLayout>

        </LinearLayout>

        <!--<View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/shape_play_space" />-->

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorDivider_d9d9d9" />

        <android.support.v4.view.ViewPager
            android:id="@+id/playPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</RelativeLayout>
