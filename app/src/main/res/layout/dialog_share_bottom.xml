<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_share_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"/>

    <TextView
        android:id="@+id/tv_dialog_cancle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rv_share_list"
        android:background="@drawable/shape_line_top"
        android:gravity="center"
        android:text="@string/tv_cancle"
        android:textColor="@color/textColor_999999"
        android:textSize="16sp" />
</RelativeLayout>