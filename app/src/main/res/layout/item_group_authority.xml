<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/group_authority"
    android:layout_width="match_parent"
    android:layout_alignParentTop="true"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="14dp"
        android:paddingTop="15dp"
        android:text="@string/default_rehabilitation_choose"
        android:textColor="@color/textColor_999999"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorDivider_d9d9d9" />

    <RadioButton
        android:id="@+id/authority_rb1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:button="@null"
        android:drawableRight="@drawable/item_radiobutton_selector"
        android:paddingBottom="14dp"
        android:paddingLeft="16dp"
        android:paddingRight="26dp"
        android:paddingTop="14dp"
        android:text="@string/authority_rb1"
        android:textColor="@color/textColor_333333"
        android:textSize="17sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorDivider_d9d9d9" />

    <RadioButton
        android:id="@+id/authority_rb2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:button="@null"
        android:drawableRight="@drawable/item_radiobutton_selector"
        android:paddingBottom="14dp"
        android:paddingLeft="16dp"
        android:paddingRight="26dp"
        android:paddingTop="14dp"
        android:text="@string/authority_rb2"
        android:textColor="@color/textColor_333333"
        android:textSize="17sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorDivider_d9d9d9" />

    <RadioButton
        android:id="@+id/authority_rb3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:button="@null"
        android:drawableRight="@drawable/item_radiobutton_selector"
        android:paddingBottom="14dp"
        android:paddingLeft="16dp"
        android:paddingRight="26dp"
        android:paddingTop="14dp"
        android:text="@string/authority_rb3"
        android:textColor="@color/textColor_333333"
        android:textSize="17sp" />

</RadioGroup>