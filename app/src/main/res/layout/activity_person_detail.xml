<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.IMPersonDetailActivity">

    <include layout="@layout/include_title" />

    <cn.gogoal.im.ui.view.XLayout
        android:id="@+id/xLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/person_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <cn.gogoal.im.ui.view.SelectorButton
                android:id="@+id/add_friend_button"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="12dp"
                android:text="添加好友"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:normalBackgroundColor="@color/player_add_friend"
                app:pressedBackgroundColor="#f68d8d"
                app:radius="5dp" />
        </LinearLayout>
    </cn.gogoal.im.ui.view.XLayout>
</LinearLayout>