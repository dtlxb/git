<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_item_event_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_item_event_list_name_icon"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/tv_item_event_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="石墨烯"
            android:textColor="@color/textColor_333333"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_event_list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:drawablePadding="15dp"
        android:drawableRight="@mipmap/img_more_in_bigdata"
        android:padding="15dp"
        android:text="2017-06-29"
        android:textColor="@color/textColor_666666"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_item_event_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_item_event_list_name"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:text="askdjhfakjsdfhalkjdhfalkjsdfhaljkdfhalskdfhalkjdfaskdjhfakjsdfhalkjdhfalkjsdfhaljkdfhalskdfhalkjdf"
        android:textSize="14sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_inner_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_event_list_title"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_line_top"
        android:paddingTop="1px"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:reverseLayout="false" />

</RelativeLayout>