<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.EditSquareBriefActivity">

    <include layout="@layout/include_title" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/noinfo_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/iv_noinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/no_group_info" />

                <TextView
                    android:id="@+id/tv_noinfo_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_noinfo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:lineSpacingExtra="10dp"
                    android:textColor="@color/colorXLayout"
                    android:textSize="18sp" />

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/edit_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/text_count_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="13dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="13dp">

                    <TextView
                        android:id="@+id/tv_published_brief"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发布后将以聊天消息发送到群聊"
                        android:textColor="@color/textColor_b2b2b2"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_text_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="字数:0/50"
                        android:textColor="@color/textColor_b2b2b2"
                        android:textSize="14sp" />

                </RelativeLayout>

                <EditText
                    android:id="@+id/et_group_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/absoluteWhite"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="top"
                    android:lineSpacingExtra="5dp"
                    android:maxLength="50"
                    android:padding="16dp"
                    android:textColor="@color/textColor_333333"
                    android:textSize="16sp" />

            </LinearLayout>

            <cn.gogoal.im.ui.view.SelectorButton
                android:id="@+id/button_edit"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="12dp"
                android:text="编辑"
                android:textColor="@color/absoluteWhite"
                android:textSize="18sp"
                app:normalBackgroundColor="@color/stock_red"
                app:pressedBackgroundColor="#f68d8d"
                app:radius="8dp" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/load_pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </FrameLayout>

</LinearLayout>