<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_below="@+id/group_light"
    android:divider="@color/colorDivider_d9d9d9"
    android:orientation="vertical"
    app:divider="@drawable/shape_divider_1px"
    app:showDividers="middle">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/radio_group"
        android:paddingBottom="5dp"
        android:paddingLeft="14dp"
        android:paddingTop="15dp"
        android:text="@string/average_setting_1_250"
        android:textColor="@color/textColor_999999"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/layout_avg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingBottom="14dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="14dp">

        <TextView
            android:id="@+id/flag_tv_type_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:text="@string/flag_tv_type_1"
            android:textColor="@color/textColor_333333"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_day1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="@string/day"
            android:textColor="@color/textColor_333333"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/et_ln1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/tv_day1"
            android:layout_toRightOf="@+id/flag_tv_type_1"
            android:background="@null"
            android:gravity="end"
            android:inputType="number"
            android:maxLength="3"
            android:text="5"
            android:textSize="17sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_avg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingBottom="14dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="14dp">

        <TextView
            android:id="@+id/flag_tv_type_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:text="@string/flag_tv_type_2"
            android:textColor="@color/textColor_333333"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_day2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="@string/day"
            android:textColor="@color/textColor_333333"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/et_ln2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/tv_day2"
            android:layout_toRightOf="@+id/flag_tv_type_2"
            android:background="@null"
            android:gravity="end"
            android:inputType="number"
            android:maxLength="3"
            android:text="10"
            android:textSize="17sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_avg3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingBottom="14dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="14dp">

        <TextView
            android:id="@+id/flag_tv_type_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:text="@string/flag_tv_type_3"
            android:textColor="@color/textColor_333333"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_day3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="@string/day"
            android:textColor="@color/textColor_333333"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/et_ln3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/tv_day3"
            android:layout_toRightOf="@+id/flag_tv_type_3"
            android:background="@null"
            android:gravity="end"
            android:inputType="number"
            android:maxLength="3"
            android:text="20"
            android:textSize="17sp" />
    </RelativeLayout>

</android.support.v7.widget.LinearLayoutCompat>