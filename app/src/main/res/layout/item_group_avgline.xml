<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="14dp"
        android:paddingTop="15dp"
        android:text="均线参数设置(1-250日)"
        android:textColor="@color/textColor_999999"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorDivider_d9d9d9" />

    <RelativeLayout
        android:id="@+id/layout_avg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:clickable="true"
        android:paddingBottom="14dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:text="第一根均线设置"
            android:textColor="@color/textColor_333333"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_day1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="日"
            android:textColor="@color/textColor_333333"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/et_ln1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/tv_day1"
            android:background="@null"
            android:clickable="false"
            android:gravity="end"
            android:inputType="number"
            android:maxLength="3"
            android:text="5"
            android:textSize="17sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorDivider_d9d9d9" />

    <RelativeLayout
        android:id="@+id/layout_avg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:clickable="true"
        android:paddingBottom="14dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:text="第一根均线设置"
            android:textColor="@color/textColor_333333"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_day2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="日"
            android:textColor="@color/textColor_333333"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/et_ln2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/tv_day2"
            android:background="@null"
            android:clickable="false"
            android:gravity="end"
            android:inputType="number"
            android:maxLength="3"
            android:text="10"
            android:textSize="17sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorDivider_d9d9d9" />

    <RelativeLayout
        android:id="@+id/layout_avg3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:clickable="true"
        android:paddingBottom="14dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:text="第一根均线设置"
            android:textColor="@color/textColor_333333"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_day3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="日"
            android:textColor="@color/textColor_333333"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/et_ln3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/tv_day3"
            android:background="@null"
            android:clickable="false"
            android:gravity="end"
            android:inputType="number"
            android:maxLength="3"
            android:text="20"
            android:textSize="17sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorDivider_d9d9d9" />

</LinearLayout>