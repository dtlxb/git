<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7.5dp"
                    android:layout_marginTop="7.5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/textFormName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/default_char"
                        android:textColor="@color/textColor_333333"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:id="@+id/mystock_tabs"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/chart_tab_shape"
                        android:gravity="center"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/chart_tab_one"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/chart_tab_shape_select_left"
                            android:gravity="center"
                            android:text="表1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_14" />

                        <TextView
                            android:id="@+id/chart_tab_two"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="表2"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/text_size_14" />

                    </LinearLayout>

                </RelativeLayout>

                <cn.gogoal.im.ui.view.BarView
                    android:id="@+id/barAnalysisView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@android:color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <!--左边的ListView-->
                <cn.gogoal.im.ui.copy.InnerListView
                    android:id="@+id/lsv_left"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    android:scrollbars="none" />

                <!--右边的ScrollView-->
                <HorizontalScrollView
                    android:id="@+id/rightHorscrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                    <cn.gogoal.im.ui.copy.InnerListView
                        android:id="@+id/lsv_right"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@null"
                        android:scrollbars="none" />

                </HorizontalScrollView>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioBtn0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="全部"
            android:textColor="@drawable/analysis_radio_button"
            android:textSize="14dp" />

        <RadioButton
            android:id="@+id/radioBtn1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="年报"
            android:textColor="@drawable/analysis_radio_button"
            android:textSize="14dp" />

        <RadioButton
            android:id="@+id/radioBtn2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="中报"
            android:textColor="@drawable/analysis_radio_button"
            android:textSize="14dp" />

        <RadioButton
            android:id="@+id/radioBtn3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="一季报"
            android:textColor="@drawable/analysis_radio_button"
            android:textSize="14dp" />

        <RadioButton
            android:id="@+id/radioBtn4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="三季报"
            android:textColor="@drawable/analysis_radio_button"
            android:textSize="14dp" />

    </RadioGroup>

</LinearLayout>
