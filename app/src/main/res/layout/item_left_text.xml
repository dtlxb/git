<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/item_chat_time_bg"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/user_head_photo"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@+id/message_time"
        android:background="@mipmap/timg" />

    <RelativeLayout
        android:id="@+id/user_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_time"
        android:layout_marginEnd="54dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/user_head_photo">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:text="what the fag say"
            android:textColor="@color/textColor_333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/what_user_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name"
            android:background="@drawable/message_background"
            android:gravity="center_vertical"
            android:minHeight="44dp"
            android:paddingLeft="16dp"
            android:paddingRight="9dp"
            android:textColor="@color/textColor_333333"
            android:textSize="14sp" />

    </RelativeLayout>

</RelativeLayout>
