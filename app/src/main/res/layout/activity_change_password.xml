<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/stock_market_bg"
    android:orientation="vertical"
    tools:context=".activity.ChangePasswordActivity">

    <include layout="@layout/include_title" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:stretchColumns="1">

        <TableRow
            style="@style/TabRowChangePsw"
            android:background="@drawable/shape_line_top_and_bottom">

            <TextView
                style="@style/TvChangePsw"
                android:text="原密码" />

            <cn.gogoal.im.ui.view.XEditText
                android:id="@+id/et_psw_original"
                style="@style/EtChangePsw"
                android:hint="请输入原密码"
                app:funcType="canClear" />

        </TableRow>

        <TableRow
            style="@style/TabRowChangePsw"
            android:layout_marginTop="15dp"
            android:background="@android:color/white">

            <TextView
                style="@style/TvChangePsw"
                android:text="新密码" />

            <cn.gogoal.im.ui.view.XEditText
                android:id="@+id/et_psw_new"
                style="@style/EtChangePsw"
                android:hint="6-16位，包含数字和字母"
                app:funcType="canClear" />

        </TableRow>

        <LinearLayout
            android:layout_height="1dp"
            android:background="@android:color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="15dp"
                android:background="#e0e0e0" />

        </LinearLayout>

        <TableRow
            style="@style/TabRowChangePsw"
            android:background="@android:color/white">

            <TextView
                style="@style/TvChangePsw"
                android:text="确认密码" />

            <cn.gogoal.im.ui.view.XEditText
                android:id="@+id/et_psw_new_again"
                style="@style/EtChangePsw"
                android:hint="请再确认一次密码"
                android:imeOptions="actionDone"
                app:funcType="canClear" />
        </TableRow>

        <View
            android:layout_height="1dp"
            android:layout_marginStart="15dp"
            android:background="#e0e0e0" />
    </TableLayout>

    <cn.gogoal.im.ui.view.SelectorButton
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:lines="1"
        android:text="确定"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        app:normalBackgroundColor="@color/player_add_friend"
        app:pressedBackgroundColor="#f68d8d"
        app:radius="4dp" />

</LinearLayout>