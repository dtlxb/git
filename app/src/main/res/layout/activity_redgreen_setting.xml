<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="15dp"
        android:background="@color/wx_share_line" />

    <RadioGroup
        android:id="@+id/group_redgreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/redup_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:button="@null"
            android:drawableRight="@drawable/item_radiobutton_selector"
            android:paddingBottom="14dp"
            android:paddingLeft="16dp"
            android:paddingRight="26dp"
            android:paddingTop="14dp"
            android:text="红涨绿跌"
            android:textColor="@color/textColor_333333"
            android:textSize="17sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/wx_share_line" />

        <RadioButton
            android:id="@+id/greenup_rb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:button="@null"
            android:drawableRight="@drawable/item_radiobutton_selector"
            android:paddingBottom="14dp"
            android:paddingLeft="16dp"
            android:paddingRight="26dp"
            android:paddingTop="14dp"
            android:text="绿涨红跌"
            android:textColor="@color/textColor_333333"
            android:textSize="17sp" />

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/wx_share_line" />

</LinearLayout>