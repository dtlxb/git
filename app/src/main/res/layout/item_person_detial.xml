<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/head_layout"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="@drawable/shape_text_border"
        android:paddingBottom="18dp"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:paddingTop="17dp">

        <ImageView
            android:id="@+id/person_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/timg" />

        <TextView
            android:id="@+id/person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/person_head"
            android:text="古色古香"
            android:textColor="@color/textColor_333333"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/person_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/person_head"
            android:text="昵称: 比尔森"
            android:textColor="@color/textColor_666666"
            android:textSize="14sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/gogoal_id"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/shape_text_border"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="15dp"
        android:paddingStart="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go-Goal账号"
            android:textColor="@color/textColor_666666"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:text="E00001234"
            android:textColor="@color/textColor_666666"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/person_base_info"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/shape_text_border"
        android:orientation="vertical"
        android:paddingStart="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地区"
                android:textColor="@color/textColor_666666"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:text="四川  成都"
                android:textColor="@color/textColor_666666"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGriddivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go-Goal账号"
                android:textColor="@color/textColor_666666"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:text="E00001234"
                android:textColor="@color/textColor_666666"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGriddivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go-Goal账号"
                android:textColor="@color/textColor_666666"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:text="E00001234"
                android:textColor="@color/textColor_666666"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/person_buffer_info"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="17dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/shape_text_border"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="15dp"
        android:paddingStart="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go-Goal账号"
            android:textColor="@color/textColor_666666"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:text="E00001234"
            android:textColor="@color/textColor_666666"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>