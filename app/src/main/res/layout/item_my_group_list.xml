<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:background="@android:color/white"
    android:paddingBottom="10dp"
    android:paddingEnd="15dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="15dp"
    android:paddingTop="10dp">

    <com.hply.roundimage.roundImage.RoundedImageView
        android:id="@+id/img_my_group_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@null" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="0dp">

        <TextView
            android:id="@+id/tv_my_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/textColor_333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_my_group_name_member_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_my_group_name"
            android:textColor="@color/textColor_666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_my_group_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/tv_my_group_name"
            android:textColor="@color/relater_play_count"
            android:textSize="14sp" />

    </RelativeLayout>

</LinearLayout>