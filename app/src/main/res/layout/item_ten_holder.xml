<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="7.5dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="7.5dp">

    <LinearLayout
        android:id="@+id/linearCont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7.5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="6"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="名称"
                android:textColor="@color/textColor_333333"
                android:textSize="14dp" />

        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="占比"
            android:textColor="@color/textColor_333333"
            android:textSize="14dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:gravity="right"
            android:text="持股(万股)"
            android:textColor="@color/textColor_333333"
            android:textSize="14dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearHolding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textSerialNum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="@string/default_char"
            android:textSize="14dp" />

        <LinearLayout
            android:id="@+id/linearPropor"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textPropor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/textColor_666666" />

        </LinearLayout>

        <TextView
            android:id="@+id/textRatio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="right"
            android:text="@string/default_char"
            android:textColor="@color/textColor_333333"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textQuantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:gravity="right"
            android:text="@string/default_char"
            android:textColor="@color/textColor_333333"
            android:textSize="14dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:singleLine="true"
        android:text="@string/default_char"
        android:textColor="@color/textColor_333333"
        android:textSize="14dp" />

</LinearLayout>