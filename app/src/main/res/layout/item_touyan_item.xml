<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_touyan_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_line_bottom_right"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_touyan_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:srcCompat="@mipmap/image_placeholder"
        android:contentDescription="@null"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_touyan_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default__"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/textColor_666666"
        android:textSize="13sp" />
</LinearLayout>