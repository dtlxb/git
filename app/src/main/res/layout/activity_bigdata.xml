<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".activity.stock.BigDataAcyivity">

    <include layout="@layout/include_title"/>

    <android.support.design.widget.TabLayout
        style="@style/NormalTabLayout"
        android:id="@+id/tab_big_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bottom_line_1dp"
        app:tabIndicatorHeight="2dp"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabTextColor="@color/textColor_333333"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabGravity="fill"
        app:tabMode="fixed"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_big_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>