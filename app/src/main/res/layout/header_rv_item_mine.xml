<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_type_mine_header"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="25dp"
    android:layout_marginStart="15dp">

    <ImageView
        android:id="@+id/img_mine_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:src="@mipmap/cache_img_mine_face" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_mine_avatar"
        android:layout_alignTop="@+id/img_mine_avatar"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/img_mine_avatar"
        android:layout_toStartOf="@+id/flag_img_more"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_mine_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="谢金明"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_mine_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="朝阳永续金融分析师"
            android:textColor="@color/color0_8White"
            android:textSize="12sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/flag_img_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:padding="20dp"
        android:src="@mipmap/img_more_255" />

</RelativeLayout>