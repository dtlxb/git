<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="15dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_user_avatar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_margin="15dp"
        android:contentDescription="@null"
        android:src="@mipmap/image_placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/item_user_avatar"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/btn_search_group_add"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_tv_search_result_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="middle"
            android:textColor="@color/textColor_333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_tv_search_result_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/textColor_999999"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/btn_search_group_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:background="@drawable/shape_search_group_add_btn"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingEnd="20dp"
        android:visibility="invisible"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:text="加入"
        android:textSize="14sp"/>

</RelativeLayout>