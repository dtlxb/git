<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/stockedit_check_layout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/stockedit_checkbox"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@null"
            android:src="@mipmap/checkbox_unchecked"
            android:contentDescription="@null" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/stockname"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:textColor="@color/text_color_normal"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/stockcode"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:textColor="@color/text_color_light"
            android:textSize="@dimen/text_size_11" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/arrow_top"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:background="@mipmap/img_sort_2_top" />

    </LinearLayout>


    <View
        android:layout_width="0dip"
        android:layout_height="@dimen/text_size_29"
        android:layout_weight="1" />


    <LinearLayout
        android:id="@+id/draghandler"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical|right"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="8dp"
            android:background="@drawable/drag"
            android:contentDescription="@null" />
    </LinearLayout>

</LinearLayout>