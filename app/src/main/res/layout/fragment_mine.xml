<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.gogoal.app.fragment.MineFragment">

    <include layout="@layout/include_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:stretchColumns="0,1"
            android:padding="10dp"
            android:orientation="vertical">

            <FrameLayout>
                <ImageView
                    android:id="@+id/image_ad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"
                    android:src="@mipmap/image_found_top_ad" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#f00"
                    android:padding="10dp"
                    android:text="圆角矩形处理"/>
            </FrameLayout>

            <TableRow android:layout_marginTop="10dp">
                <Button
                    android:id="@+id/setWatchLive"
                    android:text="播放器" />

                <Button
                    android:id="@+id/btn_upload"
                    android:text="测试上传图片" />

            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/btn_test"
                    android:text="测试通用弹窗" />

                <Button android:id="@+id/btn_wechat"
                    android:text="微信分享"/>
            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/btn_item_dialog"
                    android:text="itemDialog" />
                <Button
                    android:id="@+id/btn_item_edit"
                    android:text="editDialog" />
            </TableRow>
        </TableLayout>

    </ScrollView>
</LinearLayout>
