<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.gogoal.im.fragment.main.MineFragment">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView_mine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f8f8f8"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/layout_user_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorMineHead"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <com.hply.roundimage.roundImage.RoundedImageView
                    android:id="@+id/img_mine_avatar"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/logo"
                    android:layout_marginStart="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:riv_border_color="#e0e0e0"
                    app:riv_border_width="1dp"
                    app:riv_oval="true" />

                <TextView
                    android:id="@+id/tv_mine_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:maxLength="8"
                    android:singleLine="true"
                    android:text="@string/text_empty"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@+id/img_mine_avatar"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_mine_introduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_mine_avatar"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/text_empty"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_mine_userName"
                    app:layout_constraintTop_toBottomOf="@+id/tv_mine_userName" />

                <TextView
                    android:id="@+id/tv_authentication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_mine_introduction"
                    android:background="@drawable/shape_level"
                    android:drawablePadding="2dp"
                    android:drawableStart="@mipmap/img_authentication_white"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:paddingBottom="2dp"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:paddingTop="2dp"
                    android:text="@string/authentication"
                    android:textColor="@color/colorLevel"
                    android:textSize="10sp"
                    app:layout_constraintLeft_toRightOf="@+id/tv_mine_userName"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="5dp"
                    />

                <TextView
                    android:id="@+id/tv_mine_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_authentication"
                    android:layout_alignTop="@+id/tv_authentication"
                    android:layout_below="@+id/tv_mine_introduction"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/tv_authentication"
                    android:background="@drawable/shape_level"
                    android:drawablePadding="2dp"
                    android:drawableStart="@mipmap/img_level_white"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:paddingBottom="2dp"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:paddingTop="2dp"
                    android:text="@string/level_5"
                    android:textColor="@color/colorLevel"
                    android:textSize="10sp"
                    app:layout_constraintLeft_toRightOf="@+id/tv_authentication"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp" />

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/tv_tools_setting"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/shape_line_bottom_unpress"
                android:drawableEnd="@mipmap/img_setting"
                android:gravity="center_vertical"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:text="@string/my_tools"
                android:textColor="@color/textColor_333333"
                android:textSize="16sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_mine_tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white" />

            <include layout="@layout/layout_space_15dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_mine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:scrollbars="vertical"
                android:layout_marginBottom="25dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            <!--<AdapterViewFlipper
                android:id="@+id/text_flipper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:autoStart="true"
                android:background="@android:color/white"
                android:flipInterval="3000" />-->

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>