<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.gogoal.im.fragment.main.MineFragment">

    <include layout="@layout/include_title" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView_mine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTitle">

        <LinearLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f8f8f8"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:id="@+id/layout_user_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <com.hply.roundimage.roundImage.RoundedImageView
                        android:id="@+id/img_mine_avatar"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="center"
                        android:src="@mipmap/logo"
                        app:riv_border_color="#e0e0e0"
                        app:riv_border_width="1dp"
                        app:riv_oval="true" />


                    <TextView
                        android:id="@+id/tv_mine_userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:maxLength="8"
                        android:singleLine="true"
                        android:text="朝阳永续六小龄童"
                        android:textColor="@color/textColor_333333"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_mine_introduction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_mine_avatar"
                        android:layout_marginTop="5dp"
                        android:text="朝阳永续金融分析师"
                        android:textColor="@color/textColor_333333"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_authentication"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_mine_introduction"
                        android:background="@drawable/shape_level"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:text="高级认证"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp"
                        android:paddingStart="5dp"
                        android:layout_marginTop="10dp"
                        android:drawablePadding="2dp"
                        android:drawableStart="@mipmap/img_authentication_white"
                        android:paddingEnd="5dp"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_mine_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_mine_introduction"
                        android:background="@drawable/shape_level"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:text="等级"
                        android:layout_toEndOf="@+id/tv_authentication"
                        android:layout_alignTop="@+id/tv_authentication"
                        android:layout_alignBottom="@+id/tv_authentication"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp"
                        android:layout_marginStart="15dp"
                        android:paddingStart="5dp"
                        android:drawablePadding="2dp"
                        android:drawableStart="@mipmap/img_authentication_white"
                        android:paddingEnd="5dp"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_mine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:background="@android:color/white"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            <AdapterViewFlipper
                android:id="@+id/text_flipper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autoStart="true"
                android:background="@android:color/white"
                android:layout_margin="10dp"
                android:flipInterval="3000"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>