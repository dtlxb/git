<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:layout_marginStart="7dp"
    android:layout_marginEnd="4dp"
    app:layout_optimizationLevel="basic">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingTop="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <TextView
                android:id="@+id/tv_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:background="@color/color7by24"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingBottom="3sp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="3dp"
                android:text="09:25"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingBottom="3sp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="3dp"
                android:text="09:25"
                android:textColor="@color/textColor_666666"
                android:textSize="16sp" />

        </RelativeLayout>

        <cn.gogoal.im.ui.view.ExpandableLayout
            android:id="@+id/expanded_item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:collapseDrawable="@mipmap/img_drop_down"
            app:collapseExpandGrarity="right"
            app:expandDrawable="@mipmap/img_drop_up"
            app:maxCollapsedLines="3"
            app:collapseExpandTextColor="@android:color/white"
            app:contentTextColor="@color/textColor_333333"
            app:collapseExpandTextSize="16sp"/>

    </LinearLayout>

    <View
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#f00"/>

</android.support.v7.widget.CardView>