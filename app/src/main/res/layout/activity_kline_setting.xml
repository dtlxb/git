<?xml version="1.0" encoding="utf-8"?>
<cn.gogoal.im.ui.KeyboardLaunchRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_keyboard_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <include layout="@layout/include_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp"
        android:descendantFocusability="blocksDescendants"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="31dp">

            <include layout="@layout/item_group_authority" />

            <include layout="@layout/item_group_kline" />

            <include layout="@layout/item_group_light" />

            <include layout="@layout/item_group_avgline" />
        </LinearLayout>

    </ScrollView>

</cn.gogoal.im.ui.KeyboardLaunchRelativeLayout>