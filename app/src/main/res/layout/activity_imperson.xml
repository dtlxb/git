<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/personlist_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="10dp" />

    <TextView
        android:id="@+id/tv_do_search_conversation"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/shape_text_border"
        android:drawableRight="@mipmap/img_more"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/im_str_look_message"
        android:textColor="@color/textColor_333333"
        android:textSize="17sp" />

    <RelativeLayout
        android:id="@+id/switch_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/shape_text_border"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/im_str_no_bother"
            android:textColor="@color/textColor_333333"
            android:textSize="17sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/message_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@null" />

    </RelativeLayout>

</LinearLayout>