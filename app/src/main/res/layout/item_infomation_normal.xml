<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/tv_item_normal_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/iv_news_iamge"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="17sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_item_normal_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/iv_news_iamge"
        android:ellipsize="end"
        android:maxLines="2"
        android:lineSpacingMultiplier="1.2"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/tv_item_normal_header_title"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/textColor_333333"/>

    <TextView
        android:id="@+id/tv_item_normal_info_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_item_normal_info_title"
        android:layout_toStartOf="@+id/iv_news_iamge"
        android:gravity="center_vertical" />

    <ImageView
        android:id="@+id/iv_news_iamge"
        android:layout_width="110dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:visibility="gone" />

</RelativeLayout>