<?xml version="1.0" encoding="utf-8"?>
<com.cpiz.android.bubbleview.BubbleLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_message_more"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/find_man_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@mipmap/chat_find_man"
        android:ellipsize="end"
        android:lines="1"
        android:text="找人"
        android:padding="14dp"
        android:drawablePadding="7dp"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <View
        android:id="@+id/include_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorSearchGray" />

    <TextView
        android:id="@+id/take_square_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@mipmap/chat_find_square"
        android:ellipsize="end"
        android:lines="1"
        android:text="发起群聊"
        android:padding="14dp"
        android:drawablePadding="7dp"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</com.cpiz.android.bubbleview.BubbleLinearLayout>