<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="189dp"
                android:background="@drawable/shape_text_border"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <cn.gogoal.im.ui.view.NineGridImageView
                        android:id="@+id/iv_square_head"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="#ebebeb"
                        android:layout_centerHorizontal="true"
                        app:imgGap="2dp" />

                    <TextView
                        android:id="@+id/tv_square_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_square_head"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:textColor="@color/textColor_333333"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/tv_square_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_square_name"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="9dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:textColor="@color/textColor_666666"
                        android:textSize="17dp" />


                </RelativeLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/personlist_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:background="@color/absoluteWhite"
                android:padding="10dp" />

            <TextView
                android:id="@+id/square_message_tv"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="19dp"
                android:background="@drawable/shape_text_border"
                android:drawableRight="@mipmap/img_more"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/im_str_square_notice"
                android:textColor="@color/textColor_333333"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/person_base_info"
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:layout_marginTop="19dp"
                android:background="@drawable/shape_text_border"
                android:orientation="vertical"
                android:paddingStart="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/im_str_square_name"
                        android:textColor="@color/textColor_333333"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:textColor="@color/textColor_666666"
                        android:textSize="15sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorGriddivider" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/im_str_square_code"
                        android:textColor="@color/textColor_333333"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/expanded_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="2dp"
                        android:background="@mipmap/img_more" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@id/expanded_more"
                        android:background="@mipmap/timg" />


                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="19dp"
                android:background="@drawable/shape_text_border"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="@string/im_str_square_myname"
                    android:textColor="@color/textColor_333333"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="16dp"
                    android:drawableRight="@mipmap/img_more"
                    android:minWidth="42dp"
                    android:text="@string/im_str_clip_hangds"
                    android:textColor="@color/textColor_666666"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/getmessage_swith"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="19dp"
                android:background="@drawable/shape_text_border"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/im_str_no_bother"
                    android:textColor="@color/textColor_333333"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/bother_switch"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@null" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/save_group"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="19dp"
                android:background="@drawable/shape_text_border"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/im_str_save_group"
                    android:textColor="@color/textColor_333333"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/save_switch"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@null" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_search_history_tv"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="19dp"
                android:background="@drawable/shape_text_border"
                android:drawableRight="@mipmap/img_more"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/im_str_look_message"
                android:textColor="@color/textColor_333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_delete_square"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="19dp"
                android:background="@drawable/shape_text_border"
                android:gravity="center"
                android:text="@string/im_str_delete"
                android:textColor="@color/colorRedBg"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>