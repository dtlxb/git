<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_mystock"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/shape_line_bottom"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingEnd="15dp"
    android:paddingStart="15dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/default_char"
        android:textColor="@color/textColor_333333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_center_element"
        android:gravity="center"
        android:text="@string/default_char"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor_333333"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_third_element"
        android:gravity="center_vertical|end"
        android:text="@string/default_char"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/textColor_333333"
        android:textSize="16sp"
        android:textStyle="bold"/>
</LinearLayout>