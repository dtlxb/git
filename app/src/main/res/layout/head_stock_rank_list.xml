<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_mystock"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/shape_line_bottom"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingEnd="15dp"
    android:paddingStart="15dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/tv_center_element"
        android:gravity="center_vertical"
        android:text="@string/text_empty"
        android:textColor="@color/textColor_333333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_center_element"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/tv_third_element"
        android:gravity="center"
        android:text="@string/text_empty"
        android:textColor="@color/textColor_333333"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_widthPercent="35%" />

    <TextView
        android:id="@+id/tv_third_element"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="@string/text_empty"
        android:textColor="@color/textColor_333333"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_widthPercent="25%" />
</android.support.percent.PercentRelativeLayout>