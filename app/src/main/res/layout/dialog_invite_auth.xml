<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_share_message_bg"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editInvite"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/dialog_invite_auth"
        android:gravity="center_vertical|left"
        android:hint="@string/edit_Invite_4"
        android:maxLength="4"
        android:paddingLeft="15dp"
        android:textColor="@color/textColor_333333"
        android:textColorHint="@color/textColor_b2b2b2"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="6dp"
        android:singleLine="true"
        android:textColor="@color/stock_red"
        android:textSize="12dp"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="6dp">

        <ImageView
            android:id="@+id/imgWarn"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="3dp"
            android:src="@mipmap/invite_warn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/imgWarn"
            android:text="@string/invite_phone"
            android:textColor="@color/relater_play_count" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="16dp"
        android:background="@color/relater_play_count" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/textColor_333333"
            android:textSize="16dp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/relater_play_count" />

        <TextView
            android:id="@+id/textSure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="@color/dialog_invite_sure"
            android:textSize="16dp" />

    </LinearLayout>

</LinearLayout>