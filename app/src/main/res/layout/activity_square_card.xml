<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="189dp"
                android:background="@drawable/shape_text_border"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <cn.gogoal.im.ui.view.RectangleView
                        android:id="@+id/iv_square_head"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:id="@+id/tv_square_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_square_head"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:textColor="@color/textColor_333333"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/tv_square_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_square_name"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="9dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:textColor="@color/textColor_666666"
                        android:textSize="17dp" />


                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/look_more_person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="15dp">

                    <TextView
                        android:id="@+id/team_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:drawablePadding="7dp"
                        android:drawableRight="@mipmap/img_more"
                        android:textColor="@color/textColor_999999"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="群成员"
                        android:textColor="@color/textColor_333333"
                        android:textSize="16sp" />

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/personlist_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/person_base_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:paddingEnd="15dp"
                android:background="@drawable/shape_text_border"
                android:orientation="vertical"
                android:paddingStart="15dp">

                <RelativeLayout
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:id="@+id/tv_what_square"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/im_str_square_notice"
                        android:textColor="@color/textColor_333333"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_marginTop="12dp"
                        android:text="这是一个好群啊这是一个好群啊这是一个好群啊这是一个好群啊这是一个好群啊这是一个好群啊这是一个好群啊这是一个好群啊这是一个好群啊这是一个好群啊"
                        android:id="@+id/the_square"
                        android:layout_below="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColor_666666"
                        android:textSize="15sp" />

                </RelativeLayout>

                <include layout="@layout/include_line" />

                <RelativeLayout
                    android:id="@+id/square_brief"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/im_str_square_code"
                        android:textColor="@color/textColor_333333"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/the_brief"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="65dp"
                        android:layout_marginRight="30dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textColor="@color/textColor_666666"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/load_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="2dp"
                        android:background="@mipmap/img_more" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_search_history_tv"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="19dp"
                android:background="@drawable/shape_text_border"
                android:drawableRight="@mipmap/img_more"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/im_str_look_message"
                android:textColor="@color/textColor_333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_delete_square"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="19dp"
                android:background="@drawable/shape_text_border"
                android:gravity="center"
                android:text="@string/im_str_delete"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>