<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/player_info">

    <ImageView
        android:id="@+id/iv_comment"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/icon_live_comment" />

    <!--<ImageView
        android:id="@+id/iv_call_anchor"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_comment"
        android:background="@drawable/oval_icon_black_background"
        android:padding="7dp"
        android:src="@mipmap/icon_live_mic" />-->

    <ImageView
        android:id="@+id/iv_beauty"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_comment"
        android:src="@mipmap/icon_live_beauty_checked_normal"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_camera"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_beauty"
        android:src="@mipmap/icon_live_camera_normal"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_flash"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_camera"
        android:src="@mipmap/icon_live_share_normal"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/player_linear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|left"
            android:hint="@string/player_edit"
            android:imeOptions="actionSend"
            android:paddingLeft="12dp"
            android:singleLine="true"
            android:textColor="@color/textColor_333333"
            android:textColorHint="@color/edit_hint"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/send_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/send"
            android:textColor="@color/send_text"
            android:textSize="16dp"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>
