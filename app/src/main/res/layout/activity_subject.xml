<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.stock.SubjectDetailActivity">

    <include layout="@layout/include_title" />

    <cn.gogoal.im.ui.view.XLayout
        android:id="@+id/xLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swiperefreshlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:drawablePadding="5dp"
                        android:drawableStart="@mipmap/index"
                        android:gravity="center_vertical"
                        android:text="主题提示"
                        android:textColor="@color/colorBigDataTitle"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_opportunity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:lineSpacingMultiplier="1.5"
                        android:paddingEnd="14dp"
                        android:paddingStart="15dp"
                        android:textColor="@color/textColor_333333"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/iv_describe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:adjustViewBounds="true"
                        android:contentDescription="@null"
                        android:scaleType="centerInside" />

                    <include layout="@layout/layout_space_15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:drawablePadding="5dp"
                        android:drawableStart="@mipmap/index"
                        android:gravity="center_vertical"
                        android:text="相关股票"
                        android:textColor="@color/colorBigDataTitle"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <android.support.percent.PercentRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/shape_line_top_and_bottom"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/flag_layout_stock_info"
                            style="@style/SubjuectListHeadStyle"
                            android:gravity="center_vertical"
                            android:paddingEnd="15dp"
                            android:paddingStart="15dp"
                            android:text="股票信息"
                            app:layout_widthPercent="30%" />

                        <TextView
                            android:id="@+id/tv_item_subject_about_rate"
                            style="@style/SubjuectListHeadStyle"
                            android:layout_toEndOf="@+id/flag_layout_stock_info"
                            android:text="涨跌幅"
                            app:layout_widthPercent="25%" />

                        <TextView
                            android:id="@+id/tv_item_subject_about_price"
                            style="@style/SubjuectListHeadStyle"
                            android:layout_toEndOf="@+id/tv_item_subject_about_rate"
                            android:text="价格"
                            app:layout_widthPercent="25%" />

                        <TextView
                            android:id="@+id/iv_item_subject_about_add_stock"
                            style="@style/SubjuectListHeadStyle"
                            android:layout_alignParentEnd="true"
                            android:text="操作"
                            app:layout_widthPercent="15%" />
                    </android.support.percent.PercentRelativeLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_subject_about_stocks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_line_bottom" />

                    <include layout="@layout/layout_space_15dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:drawableStart="@mipmap/index"
                            android:gravity="center_vertical"
                            android:text="主题追踪"
                            android:textColor="@color/colorBigDataTitle"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/rdg_change_chart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="15dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rdb_checked_price"
                                style="@style/SubjectDetailChartRdbStyle"
                                android:background="@drawable/selector_rdb_subject_detail_chart_left"
                                android:checked="true"
                                android:text="价格" />

                            <RadioButton
                                android:id="@+id/rdb_checked_attention"
                                style="@style/SubjectDetailChartRdbStyle"
                                android:background="@drawable/selector_rdb_subject_detail_chart_right"
                                android:text="关注度" />

                        </RadioGroup>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_point_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:visibility="invisible"
                        android:textSize="12sp" />

                    <cn.gogoal.im.ui.widget.ForbitParentLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="50dp">

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/line_chart_price"
                            android:layout_width="match_parent"
                            android:visibility="visible"
                            android:layout_height="match_parent" />

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/line_chart_attention"
                            android:layout_width="match_parent"
                            android:background="@android:color/white"
                            android:visibility="invisible"
                            android:layout_height="match_parent"/>

                    </cn.gogoal.im.ui.widget.ForbitParentLayout>

                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </android.support.v4.widget.SwipeRefreshLayout>

    </cn.gogoal.im.ui.view.XLayout>

</LinearLayout>