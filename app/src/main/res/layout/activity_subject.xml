<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.stock.SubjectDetailActivity">

    <include layout="@layout/include_title" />

    <cn.gogoal.im.ui.view.XLayout
        android:id="@+id/xLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swiperefreshlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:drawablePadding="5dp"
                        android:drawableStart="@mipmap/index"
                        android:gravity="center_vertical"
                        android:text="主题提示"
                        android:textColor="#354346"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_opportunity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:lineSpacingMultiplier="1.5"
                        android:paddingEnd="14dp"
                        android:paddingStart="15dp"
                        android:textColor="@color/textColor_333333"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/iv_describe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:adjustViewBounds="true"
                        android:padding="25dp"
                        android:contentDescription="@null"
                        android:scaleType="centerCrop"
                        android:background="#ffffff"/>

                    <include layout="@layout/layout_space_15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:drawablePadding="5dp"
                        android:drawableStart="@mipmap/index"
                        android:gravity="center_vertical"
                        android:text="相关股票"
                        android:textColor="#354346"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <android.support.percent.PercentRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/shape_line_top_and_bottom"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/flag_layout_stock_info"
                            style="@style/SubjuectListHeadStyle"
                            android:gravity="center_vertical"
                            android:paddingEnd="15dp"
                            android:paddingStart="15dp"
                            android:text="股票信息"
                            app:layout_widthPercent="30%" />

                        <TextView
                            android:id="@+id/tv_item_subject_about_rate"
                            style="@style/SubjuectListHeadStyle"
                            android:layout_toEndOf="@+id/flag_layout_stock_info"
                            android:text="涨跌幅"
                            app:layout_widthPercent="25%" />

                        <TextView
                            android:id="@+id/tv_item_subject_about_price"
                            style="@style/SubjuectListHeadStyle"
                            android:layout_toEndOf="@+id/tv_item_subject_about_rate"
                            android:text="价格"
                            app:layout_widthPercent="25%" />

                        <TextView
                            android:id="@+id/iv_item_subject_about_add_stock"
                            style="@style/SubjuectListHeadStyle"
                            android:layout_alignParentEnd="true"
                            android:text="操作"
                            app:layout_widthPercent="15%" />
                    </android.support.percent.PercentRelativeLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_subject_about_stocks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_line_bottom"
                        tools:listitem="@layout/item_subject_event_stock_about" />

                    <include layout="@layout/layout_space_15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:drawablePadding="5dp"
                        android:drawableStart="@mipmap/index"
                        android:gravity="center_vertical"
                        android:text="热点追踪"
                        android:textColor="#354346"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <lecho.lib.hellocharts.view.LineChartView
                        android:id="@+id/chartView"
                        android:layout_width="match_parent"
                        android:layout_height="260dp"
                        android:visibility="gone" />

                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </android.support.v4.widget.SwipeRefreshLayout>

    </cn.gogoal.im.ui.view.XLayout>

</LinearLayout>