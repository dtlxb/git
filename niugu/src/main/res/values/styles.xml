<resources>

    <style name="TabLayoutTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <!--app中所有“点击查看更多”按钮样式-->
    <style name="btnLoadMoreStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:text">点击查看更多</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/selector_loadmore_btn</item>
        <item name="android:textSize">@dimen/text_size_15</item>
    </style>

    <style name="main_head_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="android:textColor">@color/head_text</item>
        <item name="android:shadowColor">@color/main_head_title_shadow_color</item>
    </style>

    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <!--五档明细的RadioButtonStyle-->
    <style name="DetailRdbStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textColor">@drawable/selector_rdb_detial_text</item>
        <item name="android:button">@null</item>
    </style>
    <!--图表放大后复权的RadioButtonStyle-->
    <style name="FuQuanRdbStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selector_rdb_fuquan_text</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="progress">
        <item name="android:windowBackground">@color/progress_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="RadioTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="android:maxHeight">0dp</item>
    </style>

    <!--大盘指数交易信息textView样式提取-->
    <style name="stock_market_text_key">
        <item name="android:gravity">right</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/text_color_word</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="stock_market_text_value">
        <item name="android:text">--</item>
        <item name="android:gravity">right</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/text_color_number</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--个股底部-->
    <style name="stockDetailDockStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#8e8e8e</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--我的自选顶部-->
    <style name="myStockNewsStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

</resources>
