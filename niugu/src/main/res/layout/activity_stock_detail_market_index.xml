<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_header"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@color/header_gray">

        <LinearLayout
            android:id="@+id/btnBack"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/image_title_back_255" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="返回"
                android:textColor="@color/title_base_button_text_color"
                android:textSize="@dimen/text_size_14" />

        </LinearLayout>

        <TextView
            android:id="@+id/textHeadTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingLeft="5dp"
            android:text="上证指数（000001）"
            android:textColor="@color/main_head_title"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/text_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textHeadTitle"
            android:layout_centerHorizontal="true"
            android:text="-- -- --"
            android:textColor="@color/main_head_title"
            android:textSize="10dp" />

        <!--<Button
            android:id="@+id/btnChoose"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_toLeftOf="@+id/btnRefresh"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/stock_optional"/>-->

        <ImageView
            android:id="@+id/btnRefresh"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/refresh_white" />

    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fragment_rotate_header_with_view_group_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:descendantFocusability="blocksDescendants"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/linear_header"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="@color/header_gray">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2">

                        <hply.com.niugu.autofixtext.AutofitTextView
                            android:id="@+id/stock_price"
                            android:layout_width="150dp"
                            android:layout_height="55dp"
                            android:layout_centerHorizontal="true"
                            android:gravity="top|center_horizontal"
                            android:singleLine="true"
                            android:text="--"
                            android:textColor="@color/main_head_title"
                            android:textSize="@dimen/text_size_48"
                            autofit:minTextSize="@dimen/text_size_8" />

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:layout_below="@+id/stock_price"
                            android:layout_centerHorizontal="true">

                            <hply.com.niugu.autofixtext.AutofitTextView
                                android:id="@+id/stock_detail_tv1"
                                android:layout_width="75dp"
                                android:layout_height="40dp"
                                android:layout_gravity="top"
                                android:gravity="bottom|left"
                                android:singleLine="true"
                                android:text="--"
                                android:textColor="@color/main_head_title"
                                android:textSize="@dimen/text_size_20"
                                autofit:minTextSize="@dimen/text_size_5" />

                            <hply.com.niugu.autofixtext.AutofitTextView
                                android:id="@+id/stock_detail_tv2"
                                android:layout_width="75dp"
                                android:layout_height="40dp"
                                android:layout_gravity="top"
                                android:gravity="bottom|right"
                                android:singleLine="true"
                                android:text="--"
                                android:textColor="@color/main_head_title"
                                android:textSize="@dimen/text_size_20"
                                autofit:minTextSize="@dimen/text_size_5" />

                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:baselineAligned="false"
                        android:paddingBottom="10dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_gravity="top"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="今开"
                                    android:textColor="@color/main_head_title"
                                    android:textSize="@dimen/text_size_11" />

                                <hply.com.niugu.autofixtext.AutofitTextView
                                    android:id="@+id/stock_start"
                                    android:layout_width="85dp"
                                    android:layout_height="30dp"
                                    android:text="--"
                                    android:textColor="@color/main_head_title"
                                    android:textSize="@dimen/text_size_16"
                                    autofit:minTextSize="@dimen/text_size_5" />

                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp">

                                <TextView
                                    android:id="@+id/textView3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_above="@+id/stock_volume"
                                    android:text="成交量"
                                    android:textColor="@color/main_head_title"
                                    android:textSize="@dimen/text_size_11" />

                                <hply.com.niugu.autofixtext.AutofitTextView
                                    android:id="@+id/stock_volume"
                                    android:layout_width="85dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentLeft="true"
                                    android:singleLine="true"
                                    android:text="--"
                                    android:textColor="@color/main_head_title"
                                    android:textSize="@dimen/text_size_16"
                                    autofit:minTextSize="@dimen/text_size_8" />

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_gravity="top"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="昨收"
                                    android:textColor="@color/main_head_title"
                                    android:textSize="@dimen/text_size_11" />

                                <hply.com.niugu.autofixtext.AutofitTextView
                                    android:id="@+id/stock_close"
                                    android:layout_width="80dp"
                                    android:layout_height="30dp"
                                    android:text="--"
                                    android:textColor="@color/main_head_title"
                                    android:textSize="@dimen/text_size_16"
                                    autofit:minTextSize="@dimen/text_size_6" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_gravity="top"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_above="@+id/stock_amplitude"
                                    android:text="振幅"
                                    android:textColor="@color/main_head_title"
                                    android:textSize="@dimen/text_size_11" />

                                <hply.com.niugu.autofixtext.AutofitTextView
                                    android:id="@+id/stock_amplitude"
                                    android:layout_width="80dp"
                                    android:layout_height="30dp"
                                    android:text="--"
                                    android:textColor="@color/main_head_title"
                                    android:textSize="@dimen/text_size_16"
                                    autofit:minTextSize="@dimen/text_size_6"/>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_show_info_dialog"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:contentDescription="@null"
                        android:paddingEnd="15dp"
                        android:paddingStart="5dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/img_drop_down" />

                </LinearLayout>

