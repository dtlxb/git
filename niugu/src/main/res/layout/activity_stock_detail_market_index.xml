                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <include
                            android:id="@+id/market_stock_detail1"
                            layout="@layout/fragment_stock_detail_charts"
                            android:layout_width="match_parent"
                            android:layout_height="250dp" />

                        <include layout="@layout/line_space_line" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@color/Kline_item_bg"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/tv_increase_layout"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_increase"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:gravity="center_horizontal"
                                    android:text="涨幅榜"
                                    android:textColor="@color/red"
                                    android:textSize="@dimen/text_size_15" />

                                <TextView
                                    android:id="@+id/tv_line_increase"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginLeft="35dp"
                                    android:layout_marginRight="35dp"
                                    android:background="@color/red" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/tv_drop_layout"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_drop"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:gravity="center_horizontal"
                                    android:text="跌幅榜"
                                    android:textColor="@color/text_color_tab"
                                    android:textSize="@dimen/text_size_15" />

                                <TextView
                                    android:id="@+id/tv_line_drop"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginLeft="35dp"
                                    android:layout_marginRight="35dp"
                                    android:background="@color/red"
                                    android:visibility="gone" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/tv_turnover_layout"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_turnover"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:gravity="center_horizontal"
                                    android:text="换手率"
                                    android:textColor="@color/text_color_tab"
                                    android:textSize="@dimen/text_size_15" />

                                <TextView
                                    android:id="@+id/tv_line_turnover"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginLeft="35dp"
                                    android:layout_marginRight="35dp"
                                    android:background="@color/red"
                                    android:visibility="gone" />

                            </RelativeLayout>


                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/load_animation_change"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <hply.com.niugu.ProgressWheel
                                android:id="@+id/progress_wheel"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_centerInParent="true"
                                wheel:matProg_barColor="#5588FF"
                                wheel:matProg_progressIndeterminate="true" />

                        </RelativeLayout>

                        <cn.gogoal.im.ui.copy.InnerListView
                            android:id="@+id/stock_lv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/white" />

                        <LinearLayout
                            android:id="@+id/stock_no_data"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:background="@android:color/white"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/no_data_image"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="暂无相关数据"
                                android:textColor="@color/header_gray"
                                android:textSize="@dimen/text_size_12" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:id="@+id/view_dialog_mask"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#55000000"
                        android:visibility="gone"
                        android:clickable="true"/>

                    <TableLayout
                        android:id="@+id/layout_dialog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:stretchColumns="0,1,2,3">

                        <TableRow
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:background="@android:color/white"
                            android:layout_weight="1">

                            <LinearLayout android:orientation="vertical">

                                <TextView
                                    style="@style/stock_market_text_key"
                                    android:text="最   高" />

                                <TextView
                                    android:id="@+id/stock_detail_tv3"
                                    style="@style/stock_market_text_value"/>

                            </LinearLayout>

                            <LinearLayout android:orientation="vertical">

                                <TextView
                                    style="@style/stock_market_text_key"
                                    android:text="最   低"/>

                                <TextView
                                    android:id="@+id/stock_detail_tv5"
                                    style="@style/stock_market_text_value" />

                            </LinearLayout>

                            <LinearLayout android:orientation="vertical">

                                <TextView
                                    style="@style/stock_market_text_key"
                                    android:text="成交额" />

                                <TextView
                                    android:id="@+id/stock_detail_tv7"
                                    style="@style/stock_market_text_value"/>

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical">

                                <TextView
                                    android:text="涨家数"
                                    style="@style/stock_market_text_key"/>

                                <TextView
                                    android:id="@+id/stock_detail_tv4"
                                    android:textColor="@color/stock_red"
                                    style="@style/stock_market_text_value"/>

                            </LinearLayout>

                        </TableRow>

                        <TableRow
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="#f0f4fa"
                            android:padding="8dp"
                            android:layout_weight="1">

                            <LinearLayout android:orientation="vertical">

                                <TextView
                                    style="@style/stock_market_text_key"
                                    android:text="平家数" />

                                <TextView
                                    android:id="@+id/stock_detail_tv6"
                                    android:textColor="@color/stock_gray"
                                    style="@style/stock_market_text_value"/>

                            </LinearLayout>

                            <LinearLayout android:orientation="vertical">

                                <TextView
                                    style="@style/stock_market_text_key"
                                    android:text="跌家数"/>

                                <TextView
                                    android:id="@+id/stock_detail_tv8"
                                    android:textColor="@color/stock_green"
                                    style="@style/stock_market_text_value"/>

                            </LinearLayout>

                        </TableRow>


                    </TableLayout>

                </FrameLayout>

            </LinearLayout>

        </ScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

