<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_stock_detail_news"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_vertical|right"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingEnd="15dp"
    android:paddingStart="15dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/big_event_tittle_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dp"
        android:textColor="@color/text_color_normal"
        android:textSize="@dimen/text_size_15" />

    <TextView
        android:id="@+id/big_event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/big_event_tittle_tv"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:gravity="bottom"
        android:text="2015-06-08"
        android:textColor="@color/gray"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/big_event_organ_andr_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/big_event_tittle_tv"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:gravity="bottom"
        android:text="华泰证券  王尼玛"
        android:textColor="@color/gray"
        android:textSize="13sp" />
</RelativeLayout>

