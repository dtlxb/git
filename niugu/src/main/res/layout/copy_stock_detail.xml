<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/stock_detail_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_header"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@color/header_gray">

        <LinearLayout
            android:id="@+id/btnBack"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/image_title_back_255" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="返回"
                android:textColor="@color/title_base_button_text_color"
                android:textSize="@dimen/text_size_14" />

        </LinearLayout>

        <TextView
            android:id="@+id/textHeadTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingLeft="5dp"
            android:text="爱使股份（600652）"
            android:textColor="@color/main_head_title"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/text_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textHeadTitle"
            android:layout_centerHorizontal="true"
            android:text="-- -- --"
            android:textColor="@color/main_head_title"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/text_delist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textHeadTitle"
            android:layout_centerHorizontal="true"
            android:text="停牌"
            android:textColor="@color/main_head_title"
            android:textSize="10dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/btnRefresh"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_message_tag"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/refresh_white" />

        <ImageView
            android:id="@+id/iv_message_tag"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:src="@mipmap/message_white" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/fragment_rotate_header_with_view_group_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/linear"
            android:background="@color/white">

            <cn.gogoal.im.ui.view.GreatScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fillViewport="true"
                android:overScrollMode="never">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/linear_header"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:background="@color/header_gray">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2">

                            <hply.com.niugu.autofixtext.AutofitTextView
                                android:id="@+id/stock_price"
                                android:layout_width="150dp"
                                android:layout_height="55dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:gravity="top|center_horizontal"
                                android:singleLine="true"
                                android:text="--"
                                android:textColor="@color/main_head_title"
                                android:textSize="@dimen/text_size_50"
                                app:minTextSize="@dimen/text_size_10" />

                            <TextView
                                android:id="@+id/stock_detail_delist"
                                android:layout_width="90dp"
                                android:layout_height="40dp"
                                android:layout_below="@id/stock_price"
                                android:layout_centerHorizontal="true"
                                android:gravity="center"
                                android:text="停牌"
                                android:textColor="@color/main_head_title"
                                android:textSize="@dimen/text_size_20"
                                android:visibility="gone" />

                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="50dp"
                                android:layout_below="@+id/stock_price"
                                android:layout_centerHorizontal="true">

                                <hply.com.niugu.autofixtext.AutofitTextView
                                    android:id="@+id/stock_detail_tv1"
                                    android:layout_width="75dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="top|left"
                                    android:gravity="bottom|left"
                                    android:singleLine="true"
                                    android:text="--"
                                    android:textColor="@color/main_head_title"
                                    android:textSize="@dimen/text_size_20"
                                    app:minTextSize="@dimen/text_size_5" />

                                <hply.com.niugu.autofixtext.AutofitTextView
                                    android:id="@+id/stock_detail_tv2"
                                    android:layout_width="75dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="top|right"
                                    android:gravity="bottom|right"
                                    android:singleLine="true"
                                    android:text="--"
                                    android:textColor="@color/main_head_title"
                                    android:textSize="@dimen/text_size_20"
                                    app:minTextSize="@dimen/text_size_8" />

                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingBottom="10dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="13dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:layout_gravity="top"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textView1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="今开"
                                        android:alpha="0.7"
                                        android:textColor="@color/main_head_title"
                                        android:textSize="@dimen/text_size_11" />

                                    <hply.com.niugu.autofixtext.AutofitTextView
                                        android:id="@+id/stock_start"
                                        android:layout_width="85dp"
                                        android:layout_height="30dp"
                                        android:singleLine="true"
                                        android:text="--"
                                        android:textColor="@color/main_head_title"
                                        android:textSize="@dimen/text_size_16"
                                        app:minTextSize="@dimen/text_size_8" />

                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp">

                                    <TextView
                                        android:id="@+id/textView3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_above="@+id/stock_volume"
                                        android:text="成交量"
                                        android:textColor="@color/main_head_title"
                                        android:textSize="@dimen/text_size_11"
                                        android:alpha="0.7"/>

                                    <hply.com.niugu.autofixtext.AutofitTextView
                                        android:id="@+id/stock_volume"
                                        android:layout_width="85dp"
                                        android:layout_height="30dp"
                                        android:layout_alignParentBottom="true"
                                        android:layout_alignParentLeft="true"
                                        android:singleLine="true"
                                        android:text="--"
                                        android:textColor="@color/main_head_title"
                                        android:textSize="@dimen/text_size_16"
                                        app:minTextSize="@dimen/text_size_8" />

                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="13dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:layout_gravity="top"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textView2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="昨收"
                                        android:alpha="0.7"
                                        android:textColor="@color/main_head_title"
                                        android:textSize="@dimen/text_size_11" />

                                    <hply.com.niugu.autofixtext.AutofitTextView
                                        android:id="@+id/stock_close"
                                        android:layout_width="85dp"
                                        android:layout_height="30dp"
                                        android:text="--"
                                        android:textColor="@color/main_head_title"
                                        android:textSize="@dimen/text_size_16"
                                        app:minTextSize="@dimen/text_size_8" />

                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp">

                                    <TextView
                                        android:id="@+id/textView4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_above="@+id/stock_turnover_rate"
                                        android:text="换手率"
                                        android:alpha="0.7"
                                        android:textColor="@color/main_head_title"
                                        android:textSize="@dimen/text_size_11" />

                                    <TextView
                                        android:id="@+id/stock_turnover_rate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="30dp"
                                        android:layout_alignParentBottom="true"
                                        android:layout_alignParentLeft="true"
                                        android:text="--"
                                        android:textColor="@color/main_head_title"
                                        android:textSize="@dimen/text_size_16" />

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_show_info_dialog"
                            android:layout_width="wrap_content"
                            android:layout_height="110dp"
                            android:contentDescription="@null"
                            android:paddingEnd="15dp"
                            android:paddingStart="5dp"
                            android:scaleType="centerInside"
                            android:src="@mipmap/img_drop_down" />

                    </LinearLayout>


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <include layout="@layout/fragment_stock_detail_charts" />

                            <android.support.design.widget.TabLayout
                                android:id="@+id/tablayout_news_"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/main_bg"
                                app:tabBackground="@color/main_bg"
                                app:tabGravity="fill"
                                app:tabIndicatorColor="@color/red"
                                app:tabMode="fixed"
                                app:tabSelectedTextColor="@color/red"
                                app:tabTextAppearance="@style/TabLayoutTextStyle"
                                app:tabTextColor="@color/tabUnSelected" />

                            <android.support.v4.view.ViewPager
                                android:id="@+id/vp_news_"
                                android:layout_width="match_parent"
                                android:layout_height="435dp"/>

                            <include layout="@layout/line_space_line" />

                        </LinearLayout>

                        <View
                            android:id="@+id/view_dialog_mask"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#55000000"
                            android:clickable="true"
                            android:visibility="gone" />

                        <cn.gogoal.im.ui.stock.DialogRecyclerView
                            android:id="@+id/rv_stock_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:visibility="gone" />

                    </FrameLayout>

                </LinearLayout>

            </cn.gogoal.im.ui.view.GreatScrollView>
        </android.support.v4.widget.SwipeRefreshLayout>

        <!---底部dock栏-->
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_line_top"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/tv_stockDetail_tools"
                style="@style/stockDetailDockStyle"
                android:drawableTop="@mipmap/img_stockdetail_tools"
                android:text="工具箱" />

            <TextView
                android:id="@+id/tv_stockDetail_stockCircle"
                style="@style/stockDetailDockStyle"
                android:drawableTop="@mipmap/img_stockdetail_group_chart"
                android:text="股票圈" />

            <TextView
                android:id="@+id/tv_stockDetail_interactiveinvestor"
                style="@style/stockDetailDockStyle"
                android:drawableTop="@mipmap/img_stock_interactiveinvestor"
                android:text="互动" />

            <TextView
                android:id="@+id/tv_stockDetail_toggle_mystock"
                style="@style/stockDetailDockStyle"
                android:drawableTop="@mipmap/choose_stock"
                android:text="自选" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
