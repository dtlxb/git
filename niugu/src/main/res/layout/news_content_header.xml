<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comment_Linear"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginBottom="2px"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <!-- 返回按钮 -->
        <LinearLayout
            android:id="@+id/btnBack"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:clickable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="8.1dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/arrow_back_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="返回"
                android:textColor="#5c5c5c"
                android:textSize="@dimen/text_size_14" />
            <!--<Button-->
            <!--android:id="@+id/btnBack2"-->
            <!--style="@style/title_base_button_net"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:background="@color/white"-->
            <!--android:drawableLeft="@drawable/arrow_back_black"-->
            <!--android:text="返回"-->
            <!--android:textColor="@color/black"/>-->

        </LinearLayout>

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp">

            <RelativeLayout
                android:id="@+id/content_love_layout"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:descendantFocusability="blocksDescendants">

                <Button
                    android:id="@+id/Favorites"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/content_love"
                    android:clickable="false"
                    android:textColor="@color/white"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/favor_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dp"
                    android:layout_toRightOf="@id/Favorites"
                    android:singleLine="true"
                    android:text="520"
                    android:textSize="@dimen/text_size_9" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/thumb_up"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:descendantFocusability="blocksDescendants">

                <Button
                    android:id="@+id/thumb_up_iv"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/activity_comment_list_item_thumb_up"
                    android:clickable="false"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/praise_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dp"
                    android:layout_toRightOf="@id/thumb_up_iv"
                    android:singleLine="true"
                    android:text="520"
                    android:textSize="@dimen/text_size_9" />

                <TextView
                    android:id="@+id/praise_count_animation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="+1"
                    android:textColor="#FF0000"
                    android:textSize="@dimen/text_size_15"
                    android:visibility="gone"
                    android:layout_above="@+id/praise_count"
                    android:layout_alignRight="@+id/thumb_up_iv"
                    android:layout_alignEnd="@+id/thumb_up_iv"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/content_share"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:descendantFocusability="blocksDescendants">

                <Button
                    android:id="@+id/sharebtn"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/content_share"
                    android:clickable="false"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/share_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dp"
                    android:layout_toRightOf="@id/sharebtn"
                    android:singleLine="true"
                    android:text="520"
                    android:textSize="@dimen/text_size_9" />
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/header_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/news_line" />
</LinearLayout>