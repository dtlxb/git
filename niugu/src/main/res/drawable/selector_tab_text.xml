<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--No focuses states-->
    <item android:color="@color/gray" android:state_pressed="false" android:state_selected="false" />
    <item android:color="@color/footer_text_color_selected" android:state_selected="true" />
    <!--Focuses states-->
    <item android:color="@color/footer_text_color_selected" android:state_focused="true" />
    <item android:color="@color/footer_text_color_selected" android:state_focused="true" android:state_selected="true" />
    <!--press-->
    <item android:color="@color/footer_text_color_selected" android:state_pressed="true" android:state_selected="true" />
    <item android:color="@color/footer_text_color_selected" android:state_pressed="true" />
</selector>
