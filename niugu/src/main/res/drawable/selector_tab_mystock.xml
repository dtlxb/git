<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!--No focuses states-->
    <item android:state_selected="false" android:state_pressed="false" android:drawable="@drawable/mystock_normal"/>
    <item android:state_selected="true"  android:drawable="@drawable/mystock_press"/>
    <!--Focuses states-->
    <item android:state_focused="true"  android:drawable="@drawable/mystock_press"/>
    <item android:state_focused="true" android:state_selected="true" android:drawable="@drawable/mystock_press"/>
    <!--press-->
    <item android:state_selected="true" android:state_pressed="true" android:drawable="@drawable/mystock_press"/>
    <item android:state_pressed="true" android:drawable="@drawable/mystock_press"/>
</selector>
